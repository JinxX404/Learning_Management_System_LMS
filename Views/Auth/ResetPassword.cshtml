@{
    Layout = "_LoginLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/login.css">
}

<main class="d-flex flex-grow-1 align-items-center justify-content-center px-4 py-5">
  <div class="w-100" style="max-width: 28rem;">
    <div class="login-card bg-tertiary border rounded-4 p-5">
      
      <div class="text-center mb-4">
        <h2 class="welcome-title text-body-emphasis">Reset Your Password</h2>
        <p class="subtitle text-secondary mt-2">Enter your email to reset your password.</p>
      </div>

      <form id="loginForm" asp-action="Dashboard" asp-controller="Student">
        <div class="mb-3">
          <label for="email" class="visually-hidden">Email address</label>
          <input type="email" class="form-control input-field p-3" id="email" placeholder="student@esu.edu" required>
        </div>
        <button type="submit" class="btn btn-primary w-100 login-btn">Reset Password</button>
      </form>

    </div>
  </div>
</main>
