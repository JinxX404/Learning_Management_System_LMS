@using Learning_Management_System.Models
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_Layout";
    var enrollments = ViewBag.Enrollments as IEnumerable<CourseEnrollment> ?? Enumerable.Empty<CourseEnrollment>();
    var notifications = ViewBag.RecentNotifications as IEnumerable<Notification> ?? Enumerable.Empty<Notification>();
    decimal gpa = ViewBag.Gpa is decimal ? ViewBag.Gpa : 0m;
    int enrollmentCount = ViewBag.EnrollmentCount ?? 0;
    int assignmentCount = ViewBag.AssignmentCount ?? 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/dashboard.css">
}

<header class="sticky-top border-bottom header-sticky">
    <div class="d-flex align-items-center px-4" style="height: 4rem;">
        <div class="d-flex align-items-center gap-2">
            <div class="brand-icon-wrapper d-flex align-items-center justify-content-center rounded-3" style="width: 2rem; height: 2rem;">
                <svg class="brand-icon" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                </svg>
            </div>
            <h1 class="brand-name font-display fs-5 fw-bold text-primary m-0">LMS Student</h1> <!-- غيّرنا الاسم -->
        </div>
        <nav class="navbar navbar-expand flex-grow-1 px-4">
            <div class="navbar-nav gap-2">
                <a class="nav-link active d-flex align-items-center gap-2" asp-action="Dashboard" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    Dashboard
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="MyCourses" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path></svg>
                    Courses
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="Announcements" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M8 2v4"></path><path d="M16 2v4"></path><rect height="18" rx="2" width="18" x="3" y="4"></rect><path d="M3 10h18"></path></svg>
                    Announcements
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="Grades" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M18 13v-3.5A1.5 1.5 0 0 0 16.5 8H3"></path><path d="m10 16 4-4"></path><path d="m14 16-4-4"></path><path d="M10 12v10"></path><path d="M4 12v10"></path><path d="M18 22V10.5"></path></svg>
                    Grades
                </a>
            </div>
        </nav>
        <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <a asp-action="Announcements" asp-controller="Student">
                    <button class="btn btn-icon rounded-circle p-2 text-secondary">
                        <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
                            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
                        </svg>
                    </button>
                </a>
                <a asp-action="AccountSettings" asp-controller="Student">
                    <button class="btn btn-icon rounded-circle p-2 text-secondary">
                        <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 0 2.1l-.15.08a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0-2-2v-.18a2 2 0 0 1-1-1.73l-.43-.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0-.73 2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                </a>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a asp-action="Profile" asp-controller="Student">
                    <img src="https://via.placeholder.com/40" alt="Student" class="rounded-circle" style="width: 2.5rem; height: 2.5rem;">
                </a>
            </div>
        </div>
    </div>
</header>

<div class="p-4 p-md-5">
    <section>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="section-title font-display fs-5 fw-semibold text-body-emphasis mb-0">Enrolled Courses</h2>
            <span class="text-secondary small">Total: @enrollmentCount</span>
        </div>
        <div class="row g-4">
            @if (!enrollments.Any())
            {
                <div class="col-12">
                    <div class="card bg-tertiary shadow-sm border-0 p-4">
                        <p class="mb-0 text-secondary">You are not enrolled in any courses yet.</p>
                    </div>
                </div>
            }
            else
            {
                @foreach (var enrollment in enrollments.Take(3))
                {
                    var course = enrollment.Course;
                    <div class="col-12 col-sm-6 col-xl-4">
                        <div class="card course-card h-100 bg-tertiary shadow-sm border-0 overflow-hidden">
                            <div class="card-body d-flex flex-column">
                                <h3 class="card-title fs-6 fw-semibold text-body-emphasis">@course?.Title</h3>
                                <p class="card-text small text-secondary mb-4">
                                    @if (course?.Instructor != null)
                                    {
                                        @($"{course.Instructor.FirstName} {course.Instructor.LastName}")
                                    }
                                    else
                                    {
                                        @:Instructor unavailable
                                    }
                                </p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between text-secondary" style="font-size: 0.75rem;">
                                        <span class="label">Credit Hours</span>
                                        <span>@course?.CreditHours</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>

    <div class="row g-4 mt-4">
        <section class="col-12 col-lg-7">
            <h2 class="section-title font-display fs-5 fw-semibold text-body-emphasis mb-4">Academic Schedule</h2>
            <div class="card bg-tertiary shadow-sm border-0 p-4">
                Calendar Placeholder
            </div>
        </section>

        <div class="col-12 col-lg-5 d-flex flex-column gap-4">
            <section>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title font-display fs-5 fw-semibold text-body-emphasis mb-0">Grades Overview</h2>
                    <span class="text-secondary small">Completed assessments: @assignmentCount</span>
                </div>
                <div class="stat-card card bg-tertiary shadow-sm border-0 p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="stat-label text-secondary m-0">Overall GPA</p>
                            <p class="grade-display display-4 fw-bold text-body-emphasis">@gpa.ToString("0.00")</p>
                        </div>
                        <div class="progress-circle" style="width: 96px; height: 96px;">
                            <svg class="w-100 h-100 progress-circle-svg" viewBox="0 0 36 36">
                                <path class="text-border-subtle" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" fill="none" stroke="currentColor" stroke-width="3"></path>
                                <path class="text-primary" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831" fill="none" stroke="currentColor" stroke-dasharray="95, 100" stroke-dashoffset="5" stroke-width="3"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </section>

            <section>
                <h2 class="section-title font-display fs-5 fw-semibold text-body-emphasis mb-4">Notifications</h2>
                <div class="d-flex flex-column gap-3">
                    @if (!notifications.Any())
                    {
                        <div class="card bg-tertiary shadow-sm border-0 p-3">
                            <p class="text-secondary mb-0">No notifications yet.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var notification in notifications)
                        {
                            <div class="card bg-tertiary shadow-sm border-0 p-3">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="d-flex align-items-center justify-content-center rounded-circle flex-shrink-0" style="width:40px; height:40px; background-color: rgba(var(--bs-primary-rgb), 0.1); color: var(--bs-primary);">
                                        <svg width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                                            <path d="M15.2 3.8a2 2 0 0 1 2.8 2.8L12.5 12 8 7.5l7.2-3.7z"></path>
                                            <path d="m4.2 10.5 4.6 2.5 2.5 4.6 2.1 3.4-3.4-2.1-4.6-2.5-3.6-6.4Z"></path>
                                            <path d="m11.4 2.8 3.4 2.1 2.5 4.6 6.4 3.6-2.5 4.6-2.1 3.4-7.2-3.7L11.4 2.8z"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="fw-medium text-body-emphasis small m-0">@notification.Message</p>
                                        <p class="text-secondary small m-0">@notification.CreatedAt.ToString("MMM d, yyyy h:mm tt")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>
        </div>
    </div>
</div>