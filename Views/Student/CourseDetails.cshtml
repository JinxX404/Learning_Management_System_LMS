        </svg>
      </div>
      <h1 class="brand-name font-display fs-5 fw-bold text-primary m-0">ESU Portal</h1>
    </div>
    <nav class="navbar navbar-expand flex-grow-1 px-4">
      <div class="navbar-nav gap-2">
        <a class="nav-link active d-flex align-items-center gap-2" asp-action="Dashboard" asp-controller="Student">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
          Dashboard
        </a>
        <a class="nav-link d-flex align-items-center gap-2" asp-action="MyCourses" asp-controller="Student">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path></svg>
          Courses
        </a>
        <a class="nav-link d-flex align-items-center gap-2" asp-action="Announcements" asp-controller="Student">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M8 2v4"></path><path d="M16 2v4"></path><rect height="18" rx="2" width="18" x="3" y="4"></rect><path d="M3 10h18"></path></svg>
          Announcements
        </a>
        <a class="nav-link d-flex align-items-center gap-2" asp-action="Grades" asp-controller="Student">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M18 13v-3.5A1.5 1.5 0 0 0 16.5 8H3"></path><path d="m10 16 4-4"></path><path d="m14 16-4-4"></path><path d="M10 12v10"></path><path d="M4 12v10"></path><path d="M18 22V10.5"></path></svg>
          Grades
        </a>
      </div>
    </nav>
    <div class="d-flex align-items-center gap-3">
      <div class="d-flex align-items-center gap-2">
        <a asp-action="Announcements" asp-controller="Student">            <button class="btn btn-icon rounded-circle p-2 text-secondary"><svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path></svg></button>
</a>
  <a asp-action="AccountSettings" asp-controller="Student">            <button class="btn btn-icon rounded-circle p-2 text-secondary"><svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 0 2.1l-.15.08a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1 0-2.1l.15-.08a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path><circle cx="12" cy="12" r="3"></circle></svg></button>
</a>
</div>
      <div class="d-flex align-items-center gap-2">
        <a asp-action="Profile" asp-controller="Student">            <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuC0yqIeWjZhANVkvYizR4zvPjouwwzOg0ElzE5M2ymYIxc0EoHaO0iOxNJet-ODA3T-7ygdDvKu9PbGME49JtpxTy2txcN5GmnDNI8PX5rQaXKmRMlN5D8O7IVQjgcQ3cqy6bXyfpkejnFarNj-Cm3Iv1_HAebU5bQjF5pBqiZuGmSe5x-T-p2weAf0x5QhhNneblcnQHwzdYHg40f3XbJFFyvS5GUJfwz-GMPjxbtpW4alIvido-4ujc8iZhNBKGreBC9WI4gSpMY" alt="Sarah Chen" class="rounded-circle" style="width: 2.5rem; height: 2.5rem;">
</a>
      </div>
    </div>
  </div>
</header>

<main class="container-lg my-4 my-md-5">
  <div class="mx-auto" style="max-width: 56rem;">
    <div class="course-header position-relative rounded-4 overflow-hidden shadow-sm mb-4">
      <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient" style="--bs-gradient: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.1));"></div>
      <div class="position-relative text-white p-4 p-md-5 d-flex flex-column justify-content-end hero-bg-image">
        <h1 class="course-title display-5 fw-bold">@course.Title</h1>
        <p class="course-instructor fs-5 mt-1" style="color: rgba(255,255,255,0.9)">with @instructorName</p>
      </div>
    </div>

    <div class="rounded-4 shadow-sm">
      <div class="border-bottom">
        <div class="d-flex align-items-center px-3">
          <ul class="nav nav-tabs border-0">
            <li class="nav-item">
              <a class="nav-link active fw-semibold" asp-controller="Student" asp-action="CourseDetails" asp-route-id="@courseId">Overview</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-semibold" asp-controller="Student" asp-action="CourseContent" asp-route-id="@courseId">Content</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-semibold" asp-controller="Student" asp-action="Assignments">Assignments</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-semibold" asp-controller="Student" asp-action="Grades">Grades</a>
            </li>
          </ul>
        </div>
      </div>

      <div class="p-4 p-md-5">
        <section class="course-section mb-5">
          <h2 class="section-title fs-2 fw-bold mb-3">Course Description</h2>
          <p class="course-desc text-secondary">
            @(!string.IsNullOrWhiteSpace(course.Description)
                ? course.Description
                : "No description has been provided for this course yet.")
          </p>
        </section>

        <section class="course-section mb-5">
          <h2 class="section-title fs-2 fw-bold mb-3">Instructor</h2>
          <div class="d-flex align-items-center p-3 rounded-3 bg-body-tertiary">
            <div class="instructor-avatar-img rounded-circle me-3 flex-shrink-0"></div>
            <div>
              <p class="fw-semibold text-body-emphasis mb-1">Dr. Eleanor Harper</p>
              <p class="text-secondary small mb-0">Professor of Computer Science</p>
            </div>
          </div>
        </section>

        <section class="course-section">
          <h2 class="section-title fs-2 fw-bold mb-3">Course Details</h2>
          <dl class="row g-3">
            <div class="col-md-6">
              <dt class="small text-secondary">Course Code</dt>
              <dd class="fw-medium text-body-emphasis">@course.CourseCode</dd>
            </div>
            <div class="col-md-6">
              <dt class="small text-secondary">Credits</dt>
              <dd class="fw-medium text-body-emphasis">@course.CreditHours</dd>
            </div>
            <div class="col-md-6">
              <dt class="small text-secondary">Term</dt>
              <dd class="fw-medium text-body-emphasis">@course.AcademicTerm?.TermName ?? "N/A"</dd>
            </div>
            <div class="col-md-6">
              <dt class="small text-secondary">Status</dt>
              <dd class="fw-medium text-body-emphasis">@course.Status</dd>
            </div>
            <div class="col-12">
              <dt class="small text-secondary">Instructor</dt>
              <dd class="fw-medium text-body-emphasis">@instructorName</dd>
            </div>
          </dl>
        </section>
      </div>
    </div>
  </div>
</main>
