@using Learning_Management_System.Models
@{
    ViewData["Title"] = "Available Courses";
    Layout = "_Layout";
    var courses = ViewBag.AvailableCourses as IEnumerable<Course> ?? Enumerable.Empty<Course>();
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-list.css">
}

@await Html.PartialAsync("_StudentNav")

<main class="container flex-grow-1 py-5">
    <h2 class="fs-2 fw-bold mb-5">Available Courses</h2>

    @if (!courses.Any())
    {
        <div class="alert alert-info">
            No courses available for enrollment at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in courses)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card bg-tertiary h-100 border-0 shadow-sm rounded-3 d-flex flex-column">
                        <div class="card-body d-flex flex-column flex-grow-1 p-4">
                            <h3 class="card-title fs-6 fw-bold">@course.Title</h3>
                            <p class="card-text small text-secondary">
                                Instructor: @course.Instructor?.FirstName @course.Instructor?.LastName
                            </p>
                            <p class="card-text small text-secondary">
                                Term: @course.AcademicTerm?.TermName
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between small text-secondary mb-1">
                                    <span>Credits</span>
                                    <span>@course.CreditHours</span>
                                </div>
                                <div class="d-flex justify-content-between small text-secondary mb-1">
                                    <span>Enrolled</span>
                                    <span>@course.CurrentEnrollment / @course.MaxEnrollment</span>
                                </div>
                                <form asp-action="EnrollInCourse" asp-controller="Student" method="post">
                                    <input type="hidden" name="courseId" value="@course.CourseId" />
                                    <button type="submit" class="btn btn-primary w-100 fw-semibold mt-3">Enroll Now</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</main>