@using Learning_Management_System.Models
@{
    ViewData["Title"] = "ESU - Announcements";
    Layout = "_Layout";
    var notifications = ViewBag.Notifications as IEnumerable<Notification> ?? Enumerable.Empty<Notification>();
    int unread = ViewBag.UnreadCount ?? 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/announcements.css">
}

<header class="sticky-top border-bottom header-sticky" style="background-color: var(--bs-tertiary-bg-rgb);">
    <div class="d-flex align-items-center px-4" style="height: 4rem;">
        <div class="d-flex align-items-center gap-2">
            <div class="brand-icon-wrapper d-flex align-items-center justify-content-center rounded-3" style="width: 2rem; height: 2rem;">
                <svg class="brand-icon" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                </svg>
            </div>
            <h1 class="brand-name font-display fs-5 fw-bold text-primary m-0">LMS Student</h1>
        </div>
        <nav class="navbar navbar-expand flex-grow-1 px-4">
            <div class="navbar-nav gap-2">
                <a class="nav-link  d-flex align-items-center gap-2" asp-action="Dashboard" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    Dashboard
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="MyCourses" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path></svg>
                    Courses
                </a>
                <a class="nav-link active d-flex align-items-center gap-2" asp-action="Announcements" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M8 2v4"></path><path d="M16 2v4"></path><rect height="18" rx="2" width="18" x="3" y="4"></rect><path d="M3 10h18"></path></svg>
                    Announcements
                </a>
                @* <a class="nav-link d-flex align-items-center gap-2" asp-action="Grades" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M18 13v-3.5A1.5 1.5 0 01 16.5 8H3"></path><path d="m10 16 4-4"></path><path d="m14 16-4-4"></path><path d="M10 12v10"></path><path d="M4 12v10"></path><path d="M18 22V10.5"></path></svg>
                    Grades
                </a> *@
            </div>
        </nav>
        <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <a asp-action="Announcements" asp-controller="Student">
                    <button class="btn btn-icon rounded-circle p-2 text-secondary">
                        <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
                            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
                        </svg>
                    </button>
                </a>
                <a asp-action="AccountSettings" asp-controller="Student">
                    <button class="btn btn-icon rounded-circle p-2 text-secondary">
                        <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 0 2.1l-.15.08a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1 0-2.1l.15-.08a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                </a>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a asp-action="Profile" asp-controller="Student">
                    <img src="https://via.placeholder.com/40" alt="Student" class="rounded-circle" style="width: 2.5rem; height: 2.5rem;">
                </a>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid py-4">
    <main class="main-content flex-grow-1 p-4 p-md-5">
        <div class="container-fluid max-w-lg">
            <header class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h1 class="page-title fs-2 fw-bold">Announcements</h1>
                    <p class="page-subtitle text-secondary">Stay updated with the latest news and announcements.</p>
                </div>
                
            </header>

            <div class="search-container d-flex justify-content-between align-items-center mb-5">
                <div class="input-group" style="max-width: 420px;">
                    <span class="input-group-text bg-transparent border-end-0">
                        <i class="fas fa-search text-secondary"></i>
                    </span>
                    <input type="text" class="form-control search-input border-start-0 " placeholder="Search announcements...">
                </div>
                @* <button class="btn btn-primary new-announcement-btn fw-semibold">
          <i class="fas fa-plus me-2"></i> New Announcement
        </button> *@
            </div>

            <div class="d-flex flex-column gap-4">
                @if (!notifications.Any())
                {
                    <div class="announcement-card card bg-tertiary rounded-3">
                        <div class="card-body p-4">
                            <p class="card-text text-secondary small mb-0">Youâ€™re all caught up! No announcements at the moment.</p>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var notification in notifications)
                    {
                        <div class="announcement-card card bg-tertiary rounded-3">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-3 mb-2">
                                            <span class="badge @(notification.IsRead ? "badge-events" : "badge-urgent") rounded-pill">
                                                @(notification.IsRead ? "Info" : "")
                                            </span>
                                            <h5 class="card-title mb-0 fs-6 fw-semibold">@notification.Message</h5>
                                        </div>
                                        <small class="text-secondary opacity-75" style="font-size: 0.75rem;">@notification.CreatedAt.ToString("MMMM d, yyyy h:mm tt")</small>
                                    </div>
                                    <small class="text-secondary ms-4 flex-shrink-0">@notification.CreatedAt.ToShortDateString()</small>
                                </div>
                                

                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="~/js/announcements.js"></script>
}