@using Learning_Management_System.Models
@{
    ViewData["Title"] = "ESU - Profile";
    Layout = "_Layout";
    var user = ViewBag.User as User;
    var enrollments = ViewBag.Enrollments as IEnumerable<CourseEnrollment> ?? Enumerable.Empty<CourseEnrollment>();
    decimal gpa = ViewBag.Gpa is decimal ? ViewBag.Gpa : 0m;
    if (user == null)
    {
        <div class="container py-5">
            <div class="alert alert-warning">Unable to load profile information.</div>
        </div>
        return;
    }
    var studentProfile = user.StudentProfile;
}

