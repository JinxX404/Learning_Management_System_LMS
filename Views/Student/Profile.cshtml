<main class="container-lg my-4 my-md-5">
  <div class="mx-auto" style="max-width: 56rem;">
    <div class="profile-header card bg-tertiary border-custom shadow-sm rounded-4 p-3 p-md-4 mb-4">
      <div class="card-body">
          <div class="d-flex flex-column flex-md-row align-items-center gap-4">
              <div class="position-relative flex-shrink-0">
                  <div class="profile-img profile-avatar rounded-circle" style="background-image: url('https://ui-avatars.com/api/?name=@user.FirstName+@user.LastName&background=0D8ABC&color=fff');"></div>
                  <span class="online-indicator position-absolute bottom-0 end-0 bg-success rounded-circle" style="transform: translate(-25%, -25%);"></span>
              </div>
              <div class="text-center text-md-start">
                  <h1 class="profile-name display-6 fw-bold">@user.FirstName @user.LastName</h1>
                  <p class="profile-meta fs-5 text-secondary">@user.Institution?.Name</p>
                  <p class="profile-meta text-muted small">Student ID: @studentProfile?.StudentIdNumber</p>
              </div>
          </div>
      </div>
    </div>
        <ul class="nav nav-tabs border-bottom-1 mb-5">
            <li class="nav-item"><a class="nav-link active fw-medium" asp-action="Profile" asp-controller="Student">Overview</a></li>
            <li class="nav-item"><a class="nav-link" asp-action="MyCourses" asp-controller="Student">Courses</a></li>
        </ul>
    <div class="d-grid gap-5">
      <section>
        <h2 class="section-title fs-2 fw-bold text-body-emphasis">About</h2>
        <div class="card bg-tertiary border-custom shadow-sm rounded-4 mt-3">
            <div class="card-body p-4">
                <dl class="row mb-0">
                    <div class="col-md-6 mb-3">
                        <dt class="text-secondary small">Email</dt>
                        <dd class="fw-semibold text-body-emphasis m-0">@user.Email</dd>
                    </div>
                    @* <div class="col-md-6 mb-3">
                        <dt class="text-secondary small">GPA</dt>
                        <dd class="fw-semibold text-body-emphasis m-0">@gpa.ToString("0.00")</dd>
                    </div> *@
                    <div class="col-md-6 mb-3">
                        <dt class="text-secondary small">Admission Date</dt>
                        <dd class="fw-semibold text-body-emphasis m-0">@studentProfile?.AdmissionDate?.ToString("MMMM d, yyyy")</dd>
                    </div>
                    <div class="col-md-6 mb-3">
                        <dt class="text-secondary small">Status</dt>
                        <dd class="fw-semibold text-body-emphasis m-0">@((user.IsActive ? "Active" : "Inactive"))</dd>
                    </div>
                </dl>
            </div>
        </div>
      </section>

      <section>
          <h2 class="section-title fs-2 fw-bold text-body-emphasis">Enrolled Courses</h2>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 mt-2">
              @if (!enrollments.Any())
              {
                  <div class="col">
                      <div class="card bg-tertiary border-custom shadow-sm rounded-4 h-100 overflow-hidden">
                          <div class="card-body">
                              <p class="card-text text-secondary small mb-0">No enrolled courses to display.</p>
                          </div>
                      </div>
                  </div>
              }
              else
              {
                  foreach (var enrollment in enrollments)
                  {
                      <div class="col course-item">
                          <div class="card bg-tertiary border-custom shadow-sm rounded-4 h-100 overflow-hidden">
                              <div class="card-body">
                                  <h5 class="card-title fw-semibold">@enrollment.Course?.Title</h5>
                                  <p class="card-text text-secondary small">
                                      @if (enrollment.Course?.Instructor != null)
                                      {
                                          @($"{enrollment.Course.Instructor.FirstName} {enrollment.Course.Instructor.LastName}")
                                      }
                                      else
                                      {
                                          @:Instructor unavailable
                                      }
                                  </p>
                              </div>
                          </div>
                      </div>
                  }
              }
          </div>
      </section>

      @* <section>
          <h2 class="section-title fs-2 fw-bold text-body-emphasis">Achievements</h2>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 mt-2">
              <div class="col achievement-item">
                  <div class="card bg-tertiary border-custom shadow-sm rounded-4 h-100">
                      <div class="card-body text-center p-3">
                          <p class="card-text text-secondary small mb-0">Achievements will appear here as they are added.</p>
                      </div>
                  </div>
              </div>
          </div>
      </section> *@
    </div>
  </div>
</main>

