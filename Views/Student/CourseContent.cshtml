@using Learning_Management_System.Models
@{
    ViewData["Title"] = "Module 1: Course Overview | ESU";
    Layout = "_Layout";
    var course = ViewBag.Course as Course;
    var lecture = ViewBag.Lecture as Lecture;
    var assets = ViewBag.Assets as IEnumerable<LearningAsset> ?? Enumerable.Empty<LearningAsset>();
    var progress = ViewBag.Progress as decimal? ?? 0m;
    var userId = Context.Session.GetInt32("UserId");
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-content.css">
}

<header class="sticky-top border-bottom header-sticky">
    <div class="d-flex align-items-center px-4" style="height: 4rem;">
        <div class="d-flex align-items-center gap-2">
            <div class="brand-icon-wrapper d-flex align-items-center justify-content-center rounded-3" style="width: 2rem; height: 2rem;">
                <svg class="brand-icon" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                </svg>
            </div>
            <h1 class="brand-name font-display fs-5 fw-bold text-primary m-0">ESU Portal</h1>
        </div>
        <nav class="navbar navbar-expand flex-grow-1 px-4">
            <div class="navbar-nav gap-2">
                <a class="nav-link d-flex align-items-center gap-2" asp-action="Dashboard" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    Dashboard
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="MyCourses" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path></svg>
                    Courses
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="Announcements" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M8 2v4"></path><path d="M16 2v4"></path><rect height="18" rx="2" width="18" x="3" y="4"></rect><path d="M3 10h18"></path></svg>
                    Announcements
                </a>
                <a class="nav-link d-flex align-items-center gap-2" asp-action="Grades" asp-controller="Student">
                    <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20"><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M18 13v-3.5A1.5 1.5 0 0 0 16.5 8H3"></path><path d="m10 16 4-4"></path><path d="m14 16-4-4"></path><path d="M10 12v10"></path><path d="M4 12v10"></path><path d="M18 22V10.5"></path></svg>
                    Grades
                </a>
            </div>
        </nav>
        <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <a asp-action="Announcements" asp-controller="Student">
                    <button class="btn btn-icon rounded-circle p-2 text-secondary">
                        <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
                            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
                        </svg>
                    </button>
                </a>
                <a asp-action="AccountSettings" asp-controller="Student">
                    <button class="btn btn-icon rounded-circle p-2 text-secondary">
                        <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 0 2.1l-.15.08a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1 0-2.1l.15-.08a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                </a>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a asp-action="Profile" asp-controller="Student">
                    <img src="https://via.placeholder.com/40" alt="Student" class="rounded-circle" style="width: 2.5rem; height: 2.5rem;">
                </a>
            </div>
        </div>
    </div>
</header>

<div class="d-flex flex-grow-1 overflow-hidden">
    <aside class="sidebar position-sticky overflow-y-auto border-end bg-sidebar">
        <div class="p-4"><h2 class="fs-5 fw-bold">Course Modules</h2></div>
        <nav class="d-flex flex-column">

            @if (course?.Lectures != null)
            {
                var lectures = course.Lectures.ToList();
                for (int i = 0; i < lectures.Count; i++)
                {
                    var lectureItem = lectures[i];
                    <a class="sidebar-nav-link @(i == 0 ? "active" : "")" asp-action="CourseContent" asp-controller="Student" asp-route-id="@course.CourseId" asp-route-lectureId="@lectureItem.LectureId">
                        <p class="mb-0">@(i + 1). @lectureItem.Title</p>
                        <p class="small text-secondary mb-0">@lectureItem.Description</p>
                    </a>
                }
            }
            else
            {
                <p class="text-muted">No modules available.</p>
            }
        </nav>
    </aside>

    <main class="flex-grow-1 p-4 p-lg-5 overflow-y-auto">
        <div class="mx-auto" style="max-width: 896px;">
            <div class="mb-5">
                <h1 class="lesson-title fs-2 fw-bold">@lecture?.Title</h1>
                <p class="lesson-desc text-secondary mt-2">@lecture?.Description </p>
            </div>

           

            <div class="d-flex flex-column gap-5">
                <div>
                    <h3 class="section-title fs-5 fw-bold">Course Description</h3>
                    <p class="mt-2 text-secondary">@course?.Description</p>
                </div>

                <div class="resources-section">
                    <h3 class="section-title fs-5 fw-bold">Resources</h3>
                    <div class="list-group list-group-flush mt-3 border rounded-3 overflow-hidden shadow-sm">
                        @if (assets.Any())
                        {
                            @foreach (var asset in assets)
                            {
                                <a href="@asset.FileUrl"
                                   class="resource-item list-group-item list-group-item-action bg-tertiary d-flex align-items-center gap-3 p-3">
                                    <div class="d-flex justify-content-center align-items-center rounded-2 text-secondary" style="width: 48px; height: 48px; background-color: rgba(var(--bs-secondary-rgb), 0.1);">
                                        <span class="material-symbols-outlined" data-asset-type="@asset.AssetType"></span>
                                    </div>
                                    <span class="resource-link flex-grow-1 fw-medium">@asset.Title</span>
                                    <span class="material-symbols-outlined text-secondary">chevron_right</span>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No resources available.</p>
                        }
                    </div>
                </div>

            </div>
        </div>
    </main>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Set asset icons
            const assetIcons = document.querySelectorAll('[data-asset-type]');
            assetIcons.forEach(icon => {
                const assetType = icon.getAttribute('data-asset-type');
                icon.textContent = getAssetIcon(assetType);
            });

            // Mark as Complete
            const markCompleteBtn = document.getElementById('markCompleteBtn');
            if (markCompleteBtn) {
                markCompleteBtn.addEventListener('click', function() {
                    // Send AJAX request to mark as complete
                            fetch('/Student/MarkLessonComplete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                courseId: @course?.CourseId,
                userId: @userId
            })
        })
                        .then(async response => {
                        let data;
                        try {
                            data = await response.json();
                        } catch (e) {
                            throw new Error('Invalid JSON response');
                        }
                        if (data.success) {
                            showToast('Lesson marked as complete!', 'success');
                        } else {
                            showToast('Error: ' + data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        showToast('Error: ' + error.message, 'danger');
                    });
                });
            }

            // Show toast notification
            function showToast(message, type = 'success') {
                // Create toast element
                const toast = document.createElement('div');
                toast.className = `toast bg-${type} text-white border-0`;
                toast.setAttribute('role', 'alert');
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                `;

                // Add to body
                document.body.appendChild(toast);

                // Show toast
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();

                // Remove after 3 seconds
                setTimeout(() => {
                    toast.remove();
                }, 3000);
            }

            // Get asset icon
            function getAssetIcon(assetType) {
                switch (assetType.toLowerCase()) {
                    case 'pdf':
                        return 'picture_as_pdf';
                    case 'doc':
                    case 'docx':
                        return 'description';
                    case 'ppt':
                    case 'pptx':
                        return 'slideshow';
                    case 'xls':
                    case 'xlsx':
                        return 'table_chart';
                    case 'zip':
                    case 'rar':
                        return 'archive';
                    case 'mp4':
                    case 'avi':
                        return 'movie';
                    case 'mp3':
                    case 'wav':
                        return 'audiotrack';
                    default:
                        return 'link';
                }
            }
        });
    </script>
}