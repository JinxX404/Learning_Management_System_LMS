@using Learning_Management_System.Models
@{
    ViewData["Title"] = "Quiz Results";
    Layout = "_Layout";
    var attempt = ViewBag.QuizAttempt as QuizAttempt;
    var quiz = attempt?.Quiz;
    var totalScore = ViewBag.TotalScore ?? 0m;
    var maxScore = ViewBag.MaxScore ?? 0m;
    var percentage = ViewBag.Percentage ?? 0;
    var grade = percentage >= 90 ? "A" : percentage >= 80 ? "B" : percentage >= 70 ? "C" : percentage >= 60 ? "D" : "F";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/quiz-result.css">
}

@await Html.PartialAsync("_StudentNav")

<main class="container-lg my-4 my-md-5">
    <div class="mx-auto" style="max-width: 56rem;">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="CourseQuizzes" asp-route-id="@quiz?.CourseId">@quiz?.Course?.Title</a></li>
                    <li class="breadcrumb-item active">Quiz Results</li>
                </ol>
            </nav>
            <h1 class="display-5 fw-bold">@quiz?.Title</h1>
            <p class="text-muted">Review your answers and see the correct solutions</p>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
            <div class="col">
                <div class="card h-100 text-center shadow-sm rounded-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body d-flex flex-column justify-content-center p-4 text-white">
                        <p class="mb-1 opacity-90">Your Grade</p>
                        <p class="display-3 fw-bold mb-0">@percentage%</p>
                        <p class="mt-1 opacity-75">Letter Grade: @grade</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm rounded-3">
                    <div class="card-body d-flex align-items-start p-4 gap-3">
                        <div class="bg-success-subtle text-success p-2 rounded-circle flex-shrink-0">
                            <span class="material-symbols-outlined">check_circle</span>
                        </div>
                        <div>
                            <h2 class="fs-5 fw-semibold mb-1">Total Score</h2>
                            <p class="display-4 fw-bold text-body-tertiary mb-0">@totalScore</p>
                            <p class="text-muted mb-0">out of @maxScore points</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm rounded-3">
                    <div class="card-body d-flex align-items-start p-4 gap-3">
                        <div class="bg-info-subtle text-info p-2 rounded-circle flex-shrink-0">
                            <span class="material-symbols-outlined">quiz</span>
                        </div>
                        <div>
                            <h2 class="fs-5 fw-semibold mb-1">Questions</h2>
                            <p class="display-4 fw-bold text-body-tertiary mb-0">@quiz?.QuizQuestions.Count()</p>
                            <p class="text-muted mb-0">Total Questions</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Question Review *@
        <div class="mb-5">
            <h2 class="h4 fw-bold mb-4">Question Review</h2>
            
            @if (quiz != null && attempt != null)
            {
                int questionNumber = 1;
                foreach (var question in quiz.QuizQuestions)
                {
                    var response = attempt.QuizResponses.FirstOrDefault(r => r.QuestionId == question.QuestionId);
                    var isCorrect = false;
                    string studentAnswer = "No answer";
                    string correctAnswer = "";

                    if (question.QuestionType == "ShortAnswer")
                    {
                        var correctOption = question.QuestionOptions.FirstOrDefault(o => o.IsCorrect);
                        correctAnswer = correctOption?.OptionText ?? "N/A";
                        studentAnswer = response?.ResponseText ?? "No answer";
                        isCorrect = correctOption != null && string.Equals(response?.ResponseText?.Trim(), correctOption.OptionText?.Trim(), StringComparison.OrdinalIgnoreCase);
                    }
                    else
                    {
                        var correctOption = question.QuestionOptions.FirstOrDefault(o => o.IsCorrect);
                        correctAnswer = correctOption?.OptionText ?? "N/A";
                        studentAnswer = response?.SelectedOption?.OptionText ?? "No answer";
                        isCorrect = response?.SelectedOption?.IsCorrect == true;
                    }

                    <div class="card mb-3 shadow-sm @(isCorrect ? "border-success" : "border-danger")">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Question @questionNumber (@question.Points pts)</span>
                            @if (isCorrect)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Correct</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Incorrect</span>
                            }
                        </div>
                        <div class="card-body">
                            <p class="fw-medium mb-3">@question.QuestionText</p>

                            @if (question.QuestionType == "MultipleChoice" || question.QuestionType == "TrueFalse")
                            {
                                <div class="mb-3">
                                    <p class="small text-muted mb-2">Options:</p>
                                    <div class="list-group">
                                        @foreach (var option in question.QuestionOptions)
                                        {
                                            var isStudentChoice = response?.SelectedOptionId == option.OptionId;
                                            var isCorrectOpt = option.IsCorrect;
                                            var optClass = "";
                                            var iconClass = "";
                                            
                                            if (isCorrectOpt)
                                            {
                                                optClass = "list-group-item-success";
                                                iconClass = "bi-check-circle-fill text-success";
                                            }
                                            else if (isStudentChoice && !isCorrectOpt)
                                            {
                                                optClass = "list-group-item-danger";
                                                iconClass = "bi-x-circle-fill text-danger";
                                            }

                                            <div class="list-group-item @optClass d-flex align-items-center gap-2">
                                                @if (!string.IsNullOrEmpty(iconClass))
                                                {
                                                    <i class="bi @iconClass"></i>
                                                }
                                                <span>@option.OptionText</span>
                                                @if (isStudentChoice)
                                                {
                                                    <span class="badge bg-primary ms-auto">Your answer</span>
                                                }
                                                @if (isCorrectOpt)
                                                {
                                                    <span class="badge bg-success ms-auto">Correct</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            else if (question.QuestionType == "ShortAnswer")
                            {
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <p class="small text-muted mb-1">Your Answer:</p>
                                        <div class="p-2 bg-light rounded @(isCorrect ? "border border-success" : "border border-danger")">
                                            <p class="mb-0">@studentAnswer</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <p class="small text-muted mb-1">Correct Answer:</p>
                                        <div class="p-2 bg-success-subtle border border-success rounded">
                                            <p class="mb-0">@correctAnswer</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    questionNumber++;
                }
            }
        </div>

        <div class="text-center d-flex flex-column flex-sm-row justify-content-center gap-3">
            <a asp-action="CourseQuizzes" asp-controller="Student" asp-route-id="@quiz?.CourseId" class="btn btn-primary btn-lg px-4 fw-medium">
                <i class="bi bi-arrow-left me-2"></i>Back to Quizzes
            </a>
        </div>
    </div>
</main>