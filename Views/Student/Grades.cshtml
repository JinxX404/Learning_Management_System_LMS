    <div class="d-flex align-items-center gap-3">
      <div class="d-flex align-items-center gap-2">
        <a asp-action="Announcements" asp-controller="Student">            <button class="btn btn-icon rounded-circle p-2 text-secondary"><svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path></svg></button>
