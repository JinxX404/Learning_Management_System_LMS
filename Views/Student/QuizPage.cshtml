@using Learning_Management_System.Models
@{
    ViewData["Title"] = "Take Quiz";
    Layout = "_Layout";
    var quiz = ViewBag.Quiz as Quiz;
    var timeLimit = quiz?.TimeLimitMinutes ?? 0;
    var dueDate = quiz?.DueDate;
    var existingResponses = ViewBag.ExistingResponses as Dictionary<int, string>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/quiz-page.css">
}

<header class="sticky-top border-bottom header-sticky">
    <div class="d-flex align-items-center px-4" style="height: 4rem;">
        <div class="d-flex align-items-center gap-2">
            <div class="brand-icon-wrapper d-flex align-items-center justify-content-center rounded-3" style="width: 2rem; height: 2rem;">
                <svg class="brand-icon" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                </svg>
            </div>
            <h1 class="brand-name font-display fs-5 fw-bold text-primary m-0">LMS Student</h1>
        </div>
    </div>
</header>

<main class="container-lg my-4 my-md-5 position-relative">
    
    <!-- Sticky Timer -->
    <div id="quizTimer" class="quiz-timer-sticky">
        <div class="text-center">
            <p class="text-muted small mb-1">Time Remaining</p>
            <div id="timerCountdown" class="d-flex justify-content-center gap-1 align-items-center sticky-top">
                <span id="timerHours" class="h4 fw-bold mb-0">00</span>
                <span class="h6 mb-0">:</span>
                <span id="timerMinutes" class="h4 fw-bold mb-0">00</span>
                <span class="h6 mb-0">:</span>
                <span id="timerSeconds" class="h4 fw-bold mb-0">00</span>
            </div>
            <div id="timerNoLimit" class="d-none">
                <span class="h5 fw-bold text-success">No Time Limit</span>
            </div>
        </div>
    </div>

    <div class="mx-auto" style="max-width: 48rem;">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-4 p-md-5">

                <!-- Header -->
                <div class="mb-5">
                    <h1 class="display-6 fw-bold mb-3">@quiz?.Title</h1>
                    <p class="text-secondary">@quiz?.Description</p>
                    <div class="d-flex gap-3 text-secondary small">
                        @if (timeLimit > 0)
                        {
                            <span><i class="bi bi-clock me-1"></i> Time Limit: @timeLimit mins</span>
                        }
                        @if (dueDate.HasValue)
                        {
                            <span><i class="bi bi-calendar me-1"></i> Due: @dueDate.Value.ToString("MMM dd, yyyy h:mm tt")</span>
                        }
                    </div>
                </div>

                <!-- Progress -->
                <div class="mb-5">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h2 class="fs-6 fw-semibold text-body-secondary">Quiz Progress</h2>
                        <div class="d-flex align-items-center gap-3">
                            <span id="saveStatus" class="badge bg-light text-secondary border transition-opacity" style="opacity: 0; transition: opacity 0.5s;">Saved</span>
                            <p class="fs-6 text-muted mb-0"><span id="answeredCount">0</span>/@quiz?.QuizQuestions.Count() Answered</p>
                        </div>
                    </div>
                    <div class="progress" role="progressbar" style="height: 8px;">
                        <div id="progressBar" class="progress-bar" style="width: 0%"></div>
                    </div>
                </div>

                <hr class="my-5" />

                <!-- Form -->
                <form id="quizForm" asp-action="SubmitQuiz" asp-controller="Student" method="post">
                    <input type="hidden" name="quizId" value="@quiz?.QuizId" />
                    <input type="hidden" name="attemptId" value="@ViewBag.AttemptId" />

                    @if (quiz?.QuizQuestions != null)
                    {
                        var questions = quiz.QuizQuestions.ToList();
                        for (int i = 0; i < questions.Count; i++)
                        {
                            var question = questions[i];
                            <div class="quiz-question mb-5">
                                <h3 class="fs-5 fw-semibold mb-3">
                                    <span class="text-primary fw-bold">Question @(i + 1)</span>
                                    <span class="float-end badge bg-light text-dark border">@question.Points Points</span>
                                </h3>
                                <p class="mb-4 fs-5">@question.QuestionText</p>
                                <div>
                                    @if (question.QuestionType == "ShortAnswer")
                                    {
                                        var existingText = existingResponses != null && existingResponses.ContainsKey(question.QuestionId) ? existingResponses[question.QuestionId] : "";
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-lg" 
                                                   name="answers[@question.QuestionId]" 
                                                   placeholder="Type your answer here..." 
                                                   autocomplete="off"
                                                   value="@existingText">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-grid gap-3">
                                            @foreach (var option in question.QuestionOptions)
                                            {
                                                var isChecked = existingResponses != null && existingResponses.ContainsKey(question.QuestionId) && existingResponses[question.QuestionId] == option.OptionId.ToString();
                                                <div class="position-relative">
                                                    <input type="radio" 
                                                           class="btn-check" 
                                                           name="answers[@question.QuestionId]" 
                                                           id="option_@option.OptionId" 
                                                           value="@option.OptionId" 
                                                           autocomplete="off"
                                                           @(isChecked ? "checked" : "")>
                                                    <label class="quiz-option-label w-100" 
                                                           for="option_@option.OptionId">
                                                        @option.OptionText
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }

                    <div class="text-end pt-4 mt-3 border-top">
                        <button type="submit" class="btn btn-primary btn-lg px-5 fw-semibold">Submit Quiz</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Update progress when any input changes
        function updateProgress() {
            const form = document.getElementById('quizForm');
            const formData = new FormData(form);
            const totalQuestions = @(quiz?.QuizQuestions.Count() ?? 0);
            
            // Count unique question IDs that have a value
            const answeredQuestions = new Set();
            for (let [key, value] of formData.entries()) {
                if (key.startsWith('answers[') && value.trim() !== '') {
                    const match = key.match(/answers\[(\d+)\]/);
                    if (match) answeredQuestions.add(match[1]);
                }
            }
            
            const answered = answeredQuestions.size;
            const percentage = (totalQuestions > 0) ? (answered / totalQuestions) * 100 : 0;
            
            const progressBar = document.getElementById('progressBar');
            const answeredCount = document.getElementById('answeredCount');
            
            if(progressBar) progressBar.style.width = percentage + '%';
            if(answeredCount) answeredCount.innerText = answered;
        }

        // Auto-Save Function
        async function saveAnswer(questionId, value) {
            const attemptId = document.querySelector('input[name="attemptId"]').value;
            const formData = new FormData();
            formData.append('attemptId', attemptId);
            formData.append('questionId', questionId);
            formData.append('answer', value);

            const statusEl = document.getElementById('saveStatus');
            if(statusEl) {
                statusEl.innerText = "Saving...";
                statusEl.style.opacity = 1;
            }

            try {
                const response = await fetch('/Student/SaveQuizProgress', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    if(statusEl) {
                        statusEl.innerText = "Saved";
                        setTimeout(() => { statusEl.style.opacity = 0; }, 2000);
                    }
                } else {
                    if(statusEl) statusEl.innerText = "Error saving";
                }
            } catch (error) {
                console.error('Save error:', error);
                if(statusEl) statusEl.innerText = "Error saving";
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Quiz Configuration
            const timeLimitMinutes = @timeLimit;
            const dueDateStr = '@(dueDate?.ToString("yyyy-MM-ddTHH:mm:ss") ?? "")';
            const startedAtStr = '@(ViewBag.StartedAt?.ToString("yyyy-MM-ddTHH:mm:ss") ?? "")';
            
            // --- Timer Logic ---
            function startTimer() {
                const timerCountdown = document.getElementById('timerCountdown');
                const timerNoLimit = document.getElementById('timerNoLimit');
                
                if (timeLimitMinutes <= 0 && !dueDateStr) {
                    // No limit mode
                    timerCountdown.classList.add('d-none');
                    timerNoLimit.classList.remove('d-none');
                    return;
                }
                
                // Calculate end time
                let endTime = new Date();
                
                if (timeLimitMinutes > 0) {
                    if (startedAtStr) {
                        const startedAt = new Date(startedAtStr);
                        // Add minutes to start time
                        endTime = new Date(startedAt.getTime() + timeLimitMinutes * 60000);
                    } else {
                        // Fallback
                        endTime.setMinutes(endTime.getMinutes() + timeLimitMinutes);
                    }
                } else {
                    endTime.setFullYear(endTime.getFullYear() + 100); 
                }

                if (dueDateStr) {
                    const dueDate = new Date(dueDateStr);
                    if (dueDate < endTime) {
                        endTime = dueDate;
                    }
                }
                
                function updateTimer() {
                    const currentTime = new Date();
                    const timeDiff = endTime - currentTime;
                    
                    if (timeDiff <= 0) {
                        document.getElementById('timerHours').innerText = "00";
                        document.getElementById('timerMinutes').innerText = "00";
                        document.getElementById('timerSeconds').innerText = "00";
                        
                        // Only auto-submit if we actually had a limit
                        if (timeLimitMinutes > 0 || dueDateStr) {
                            // Avoid double submission loops
                            if (!window.hasSubmitted) {
                                window.hasSubmitted = true;
                                alert("Time is up! Submitting quiz...");
                                document.getElementById('quizForm').submit();
                            }
                        }
                        return;
                    }
                    
                    const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((timeDiff % (1000 * 60)) / 1000);
                    
                    document.getElementById('timerHours').innerText = hours.toString().padStart(2, '0');
                    document.getElementById('timerMinutes').innerText = minutes.toString().padStart(2, '0');
                    document.getElementById('timerSeconds').innerText = seconds.toString().padStart(2, '0');
                    
                    // Warning styles
                    const timerElement = document.getElementById('quizTimer');
                    if (timeDiff < 5 * 60 * 1000) { 
                        timerElement.classList.add('timer-warning');
                    }
                    if (timeDiff < 1 * 60 * 1000) { 
                        timerElement.classList.remove('timer-warning');
                        timerElement.classList.add('timer-danger');
                    }
                }
                
                updateTimer(); // Initial call
                setInterval(updateTimer, 1000);
            }

            // --- Initialization ---
            startTimer();
            updateProgress();
            
            // Listen for changes on the form to update progress & Auto-Save
            document.getElementById('quizForm').addEventListener('change', function(e) {
                updateProgress();
                
                // Auto-Save
                if (e.target.name && e.target.name.startsWith('answers[')) {
                    const match = e.target.name.match(/answers\[(\d+)\]/);
                    if (match) {
                        const questionId = match[1];
                        const value = e.target.value;
                        saveAnswer(questionId, value);
                    }
                }
            });
            
            document.getElementById('quizForm').addEventListener('input', updateProgress);
        });
    </script>
}