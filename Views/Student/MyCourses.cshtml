@using Learning_Management_System.Models
@{
    ViewData["Title"] = "My Courses";
    Layout = "_Layout";
    var enrollments = ViewBag.Enrollments as IEnumerable<CourseEnrollment> ?? Enumerable.Empty<CourseEnrollment>();
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/my-courses.css">
}

@await Html.PartialAsync("_StudentNav")
<main class="container flex-grow-1 py-5">
    <h2 class="fs-2 fw-bold mb-5">My Courses</h2>

    <div class="row g-4">
        @if (!enrollments.Any())
        {
            <div class="col-12">
                <div class="card bg-tertiary h-100 border-0 shadow-sm rounded-3 d-flex flex-column p-4">
                    <p class="mb-0 text-secondary">No courses found. Once you enroll, they will appear here.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var enrollment in enrollments)
            {
                var course = enrollment.Course;
                <div class="col-md-6 col-lg-4">
                    <div class="card bg-tertiary h-100 border-0 shadow-sm rounded-3 d-flex flex-column">
                        <div class="card-body d-flex flex-column flex-grow-1 p-4">
                            <h3 class="card-title fs-6 fw-bold">@course?.Title</h3>
                            <p class="card-text small text-secondary">
                                @if (course?.Instructor != null)
                                {
                                    @($"{course.Instructor.FirstName} {course.Instructor.LastName}")
                                }
                                else
                                {
                                    @:Instructor unavailable
                                }
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between small text-secondary mb-1">
                                    <span>Credits</span>
                                    <span>@course?.CreditHours</span>
                                </div>
                                <a asp-action="CourseDetails" asp-controller="Student" asp-route-id="@course?.CourseId" class="btn btn-primary w-100 fw-semibold mt-3">View Course</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</main>