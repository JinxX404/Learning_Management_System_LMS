        <!-- Course Pass/Fail Rates -->
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Course Pass/Fail Rates</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Course Code</th>
                                    <th>Title</th>
                                    <th>Total Completed</th>
                                    <th>Pass Count</th>
                                    <th>Fail Count</th>
                                    <th>Pass Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (courseRates != null && courseRates.Any())
                                {
                                    foreach (var course in courseRates)
                                    {
                                        <tr>
                                            <td>@course.CourseCode</td>
                                            <td>@course.CourseTitle</td>
                                            <td>@course.Total</td>
                                            <td class="text-success">@course.PassCount</td>
                                            <td class="text-danger">@course.FailCount</td>
                                            <td>
                                                @{
                                                    var rate = (decimal?)course.PassRate ?? 0;
                                                    var colorClass = rate >= 0.7m ? "success" : (rate >= 0.5m ? "warning" : "danger");
                                                }
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress flex-grow-1" style="height: 8px;">
                                                        <div class="progress-bar bg-@colorClass" role="progressbar" style="width: @(rate * 100)%" aria-valuenow="@(rate * 100)" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                    <span class="text-@colorClass fw-bold">@((rate * 100).ToString("F1"))%</span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No data available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
