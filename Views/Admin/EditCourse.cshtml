@{
    ViewData["Title"] = "Edit Course";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "courses";
    var course = ViewBag.Course;
}

    <main class="flex-grow-1">
        <header class="d-flex align-items-center justify-content-between border-bottom px-4 py-3 bg-body-component sticky-top" style="min-height: 65px; z-index: 1020;">
            <div class="d-flex align-items-center gap-3">
                <a asp-action="Courses" class="btn btn-icon btn-light rounded-circle">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h2 class="fs-5 fw-bold mb-0">Edit Course</h2>
            </div>
        </header>

        <div class="p-4">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <form asp-action="EditCourse" method="post">
                                <input type="hidden" name="courseId" value="@course.CourseId" />
                                
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <label for="courseCode" class="form-label fw-medium">Course Code</label>
                                        <input type="text" class="form-control" id="courseCode" name="courseCode" value="@course.CourseCode" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="title" class="form-label fw-medium">Course Title</label>
                                        <input type="text" class="form-control" id="title" name="title" value="@course.Title" required>
                                    </div>
                                    
                                    <div class="col-12">
                                        <label for="description" class="form-label fw-medium">Description</label>
                                        <textarea class="form-control" id="description" name="description" rows="4">@course.Description</textarea>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="instructorId" class="form-label fw-medium">Instructor</label>
                                        <select class="form-select" id="instructorId" name="instructorId" required>
                                            @foreach (var instructor in ViewBag.Instructors)
                                            {
                                                if (instructor.UserId == course.InstructorId)
                                                {
                                                    <option value="@instructor.UserId" selected>@instructor.FirstName @instructor.LastName</option>
                                                }
                                                else
                                                {
                                                    <option value="@instructor.UserId">@instructor.FirstName @instructor.LastName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="academicTermId" class="form-label fw-medium">Academic Term</label>
                                        <select class="form-select" id="academicTermId" name="academicTermId" required>
                                            @foreach (var term in ViewBag.Terms)
                                            {
                                                if (term.AcademicTermId == course.AcademicTermId)
                                                {
                                                    <option value="@term.AcademicTermId" selected>@term.TermName</option>
                                                }
                                                else
                                                {
                                                    <option value="@term.AcademicTermId">@term.TermName</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <div class="col-md-4">
                                        <label for="creditHours" class="form-label fw-medium">Credit Hours</label>
                                        <input type="number" class="form-control" id="creditHours" name="creditHours" value="@course.CreditHours" min="1" max="6" required>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="maxEnrollment" class="form-label fw-medium">Max Enrollment</label>
                                        <input type="number" class="form-control" id="maxEnrollment" name="maxEnrollment" value="@course.MaxEnrollment" min="1" required>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="status" class="form-label fw-medium">Status</label>
                                        <select class="form-select" id="status" name="status" required>
                                            @if (course.Status == "Active")
                                            {
                                                <option value="Active" selected>Active</option>
                                                <option value="Inactive">Inactive</option>
                                                <option value="Archived">Archived</option>
                                            }
                                            else if (course.Status == "Inactive")
                                            {
                                                <option value="Active">Active</option>
                                                <option value="Inactive" selected>Inactive</option>
                                                <option value="Archived">Archived</option>
                                            }
                                            else
                                            {
                                                <option value="Active">Active</option>
                                                <option value="Inactive">Inactive</option>
                                                <option value="Archived" selected>Archived</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-12 d-flex justify-content-end gap-2 mt-4">
                                        <a asp-action="Courses" class="btn btn-light">Cancel</a>
                                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
