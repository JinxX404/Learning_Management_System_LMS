@{
    ViewData["Title"] = "User Management";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "users";

    var users = ViewBag.Users as IEnumerable<Learning_Management_System.Models.User>;
    var searchString = ViewBag.SearchString as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/student-management_admin.css">
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">User Management</h1>
            <p class="text-muted">Manage all system users (Students, Instructors, Admins)</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="CreateStudent" class="btn btn-primary">
                <span class="material-symbols-outlined align-middle me-1">person_add</span>
                Add Student
            </a>
            <a asp-action="CreateInstructor" class="btn btn-outline-primary">
                <span class="material-symbols-outlined align-middle me-1">school</span>
                Add Instructor
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Users</h6>
            <form asp-action="Users" method="get" class="d-flex gap-2">
                <div class="input-group">
                    <input type="text" name="searchString" value="@searchString" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <span class="material-symbols-outlined fs-6">search</span>
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(searchString))
                {
                    <a asp-action="Users" class="btn btn-secondary">Clear</a>
                }
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Institution</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (users != null && users.Any())
                        {
                            foreach (var user in users)
                            {
                                <tr>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge bg-danger">Admin</span>
                                        }
                                        else if (user.Role == "Instructor")
                                        {
                                            <span class="badge bg-info">Instructor</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Student</span>
                                        }
                                    </td>
                                    <td>@user.Institution?.Name</td>
                                    <td>
                                        @if (user.IsActive == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary" title="Edit">
                                                <span class="material-symbols-outlined fs-6">edit</span>
                                            </a>
                                            <!-- Delete Modal Trigger -->
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@user.UserId" title="Delete">
                                                <span class="material-symbols-outlined fs-6">delete</span>
                                            </button>
                                        </div>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@user.UserId" tabindex="-1" aria-labelledby="deleteModalLabel-@user.UserId" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModalLabel-@user.UserId">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete user <strong>@user.FirstName @user.LastName</strong>?
                                                        <br><br>
                                                        <small class="text-muted">This action will deactivate the user account.</small>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
