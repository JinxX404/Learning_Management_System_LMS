@{
    ViewData["Title"] = "Course Overview";
    Layout = "_Layout";
    ViewData["AdminActive"] = "courses";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-details_admin.css">
}

<div class="d-flex vh-100 w-100">
    @await Html.PartialAsync("_AdminSidebar")
    
    <main class="flex-grow-1 overflow-auto">
      <div class="container-xxl py-4 px-3 px-sm-4 px-lg-4">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0 fs-sm fw-medium">
            <li class="breadcrumb-item">
              <a asp-controller="Admin" asp-action="Courses" class="text-decoration-none text-body-secondary">Courses</a>
            </li>
            <li class="breadcrumb-item active text-body" aria-current="page">
              Introduction to User Experience Design
            </li>
          </ol>
        </nav>
        
        <div class="d-flex flex-wrap align-items-start justify-content-between gap-4 mt-4 border-bottom pb-4">
          <div class="d-flex flex-column gap-2" style="min-width: 18rem;">
            <h1 class="h2 fw-bolder mb-0 text-body">Introduction to User Experience Design</h1>
            <p class="fs-6 text-body-secondary mb-0">Manage course content, enrollment, and grades.</p>
          </div>
          <div class="d-flex flex-wrap gap-3">
            <a class="btn btn-outline-secondary d-inline-flex align-items-center justify-content-center gap-2 rounded-3 fs-sm fw-bold py-2 px-3" style="min-width: 84px;" asp-controller="Admin" asp-action="EditCourse" asp-route-id="@Model.CourseId">
              <span class="material-symbols-outlined fs-6">edit</span>
              <span>Edit Course</span>
            </a>
            <button class="btn btn-primary d-inline-flex align-items-center justify-content-center gap-2 rounded-3 fs-sm fw-bold py-2 px-3" style="min-width: 84px;">
              <span class="material-symbols-outlined fs-6">publish</span>
              <span>Publish</span>
            </button>
            <button class="btn btn-icon-danger rounded-3 d-inline-flex align-items-center justify-content-center" style="width: 2.5rem; height: 2.5rem;">
              <span class="material-symbols-outlined fs-5">delete</span>
            </button>
          </div>
        </div>
        
        <div class="mt-4">
          <div class="d-flex border-bottom gap-4">
            <a class="d-flex flex-column align-items-center justify-content-center text-decoration-none border-bottom border-primary border-3 pb-3" href="#">
              <p class="fs-sm fw-bold mb-0 text-primary">Students</p>
            </a>
            <a class="tab-link d-flex flex-column align-items-center justify-content-center text-decoration-none border-bottom border-transparent border-3 pb-3" href="#">
              <p class="fs-sm fw-bold mb-0">Lectures</p>
            </a>
            <a class="tab-link d-flex flex-column align-items-center justify-content-center text-decoration-none border-bottom border-transparent border-3 pb-3" href="#">
              <p class="fs-sm fw-bold mb-0">Quizzes</p>
            </a>
            <a class="tab-link d-flex flex-column align-items-center justify-content-center text-decoration-none border-bottom border-transparent border-3 pb-3" href="#">
              <p class="fs-sm fw-bold mb-0">Grades</p>
            </a>
          </div>
        </div>
        
        <div class="mt-4">
          <div class="card rounded-4 bg-body-tertiary border">
            <div class="card-header d-flex flex-wrap align-items-center justify-content-between gap-4 p-4 bg-transparent border-bottom">
              <div class="position-relative w-100" style="max-width: 24rem;">
                <div class="position-absolute top-50 start-0 translate-middle-y ps-3" style="pointer-events: none;">
                  <span class="material-symbols-outlined fs-5 text-body-secondary">search</span>
                </div>
                <input class="form-control rounded-3 bg-body py-2 pe-3 fs-sm" placeholder="Search students..." type="text" style="padding-left: 2.75rem;" />
              </div>
              <button class="btn btn-primary d-inline-flex align-items-center justify-content-center gap-2 rounded-3 fs-sm fw-bold py-2 px-3" style="min-width: 84px;">
                <span class="material-symbols-outlined fs-6">person_add</span>
                <span>Enroll Student</span>
              </button>
            </div>
            
            <div class="table-responsive">
              <table class="table w-100 fs-sm text-start align-middle mb-0">
                <thead class="border-bottom">
                  <tr>
                    <th class="px-4 py-3 fw-semibold text-body-secondary" scope="col">
                      <div class="d-flex align-items-center gap-1">
                        Name
                        <span class="material-symbols-outlined fs-6">swap_vert</span>
                      </div>
                    </th>
                    <th class="px-4 py-3 fw-semibold text-body-secondary" scope="col">
                      <div class="d-flex align-items-center gap-1">
                        Email
                        <span class="material-symbols-outlined fs-6">swap_vert</span>
                      </div>
                    </th>
                    <th class="px-4 py-3 fw-semibold text-body-secondary" scope="col">
                      <div class="d-flex align-items-center gap-1">
                        Enrollment Date
                        <span class="material-symbols-outlined fs-6">swap_vert</span>
                      </div>
                    </th>
                    <th class="px-4 py-3 fw-semibold text-body-secondary" scope="col">
                      <div class="d-flex align-items-center gap-1">
                        Progress
                        <span class="material-symbols-outlined fs-6">swap_vert</span>
                      </div>
                    </th>
                    <th class="relative px-4 py-3" scope="col">
                      <span class="visually-hidden">Actions</span>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="border-bottom">
                    <td class="text-nowrap px-4 py-3 fw-medium text-body">Liam Johnson</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">liam.johnson@example.com</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">2023-09-01</td>
                    <td class="text-nowrap px-4 py-3">
                      <div class="d-flex align-items-center gap-2">
                        <div class="progress rounded-pill" style="width: 6rem; height: 0.5rem;" role="progressbar" aria-label="Student progress" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                          <div class="progress-bar rounded-pill bg-success" style="width: 100%"></div>
                        </div>
                        <span class="fs-xs fw-medium text-success">100%</span>
                      </div>
                    </td>
                    <td class="text-nowrap px-4 py-3 text-end">
                      <button class="btn btn-link text-body-secondary text-decoration-none p-1"><span class="material-symbols-outlined fs-5">more_vert</span></button>
                    </td>
                  </tr>
                  <tr class="border-bottom">
                    <td class="text-nowrap px-4 py-3 fw-medium text-body">Olivia Smith</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">olivia.smith@example.com</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">2023-09-01</td>
                    <td class="text-nowrap px-4 py-3">
                      <div class="d-flex align-items-center gap-2">
                        <div class="progress rounded-pill" style="width: 6rem; height: 0.5rem;" role="progressbar" aria-label="Student progress" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                          <div class="progress-bar rounded-pill bg-primary" style="width: 75%"></div>
                        </div>
                        <span class="fs-xs fw-medium text-primary">75%</span>
                      </div>
                    </td>
                    <td class="text-nowrap px-4 py-3 text-end">
                      <button class="btn btn-link text-body-secondary text-decoration-none p-1"><span class="material-symbols-outlined fs-5">more_vert</span></button>
                    </td>
                  </tr>
                  <tr class="border-bottom">
                    <td class="text-nowrap px-4 py-3 fw-medium text-body">Noah Williams</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">noah.williams@example.com</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">2023-09-02</td>
                    <td class="text-nowrap px-4 py-3">
                      <div class="d-flex align-items-center gap-2">
                        <div class="progress rounded-pill" style="width: 6rem; height: 0.5rem;" role="progressbar" aria-label="Student progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                          <div class="progress-bar rounded-pill bg-primary" style="width: 50%"></div>
                        </div>
                        <span class="fs-xs fw-medium text-primary">50%</span>
                      </div>
                    </td>
                    <td class="text-nowrap px-4 py-3 text-end">
                      <button class="btn btn-link text-body-secondary text-decoration-none p-1"><span class="material-symbols-outlined fs-5">more_vert</span></button>
                    </td>
                  </tr>
                  <tr class="border-bottom">
                    <td class="text-nowrap px-4 py-3 fw-medium text-body">Emma Brown</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">emma.brown@example.com</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">2023-09-03</td>
                    <td class="text-nowrap px-4 py-3">
                      <div class="d-flex align-items-center gap-2">
                        <div class="progress rounded-pill" style="width: 6rem; height: 0.5rem;" role="progressbar" aria-label="Student progress" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                          <div class="progress-bar rounded-pill bg-warning" style="width: 25%"></div>
                        </div>
                        <span class="fs-xs fw-medium text-warning">25%</span>
                      </div>
                    </td>
                    <td class="text-nowrap px-4 py-3 text-end">
                      <button class="btn btn-link text-body-secondary text-decoration-none p-1"><span class="material-symbols-outlined fs-5">more_vert</span></button>
                    </td>
                  </tr>
                  <tr>
                    <td class="text-nowrap px-4 py-3 fw-medium text-body">James Jones</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">james.jones@example.com</td>
                    <td class="text-nowrap px-4 py-3 text-body-secondary">2023-09-05</td>
                    <td class="text-nowrap px-4 py-3">
                      <div class="d-flex align-items-center gap-2">
                        <div class="progress rounded-pill" style="width: 6rem; height: 0.5rem;" role="progressbar" aria-label="Student progress" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                          <div class="progress-bar rounded-pill bg-danger" style="width: 10%"></div>
                        </div>
                        <span class="fs-xs fw-medium text-danger">10%</span>
                      </div>
                    </td>
                    <td class="text-nowrap px-4 py-3 text-end">
                      <button class="btn btn-link text-body-secondary text-decoration-none p-1"><span class="material-symbols-outlined fs-5">more_vert</span></button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
</div>
