@{
    ViewData["Title"] = "Course Management";
    Layout = "_Layout";
    ViewData["AdminActive"] = "courses";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-manegment_admin.css">
}

<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_AdminSidebar")

    <main class="flex-grow-1 p-4 p-lg-5">
        <div class="container-xxl"> <div class="d-flex flex-wrap align-items-center justify-content-between gap-4">
                <h1 class="text-body-emphasis h3 fw-bolder mb-0" style="letter-spacing: -0.025em;">Course Management</h1>
                <a class="btn btn-primary d-flex align-items-center justify-content-center gap-2 shadow-sm" style="height: 40px;" asp-controller="Preview" asp-action="ViewPage" asp-route-name="AddCourse" role="button">
                    <span class="material-symbols-outlined" style="font-size: 1.125rem;">add</span>
                    <span class="small fw-bold">Add New Course</span>
                </a>
            </div>

            <div class="card card-body rounded-3 border bg-body-component p-4 mt-4">
                <div class="row g-4">
                    <div class="col-12 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text border-end-0">
                                <span class="material-symbols-outlined text-body-secondary">search</span>
                            </span>
                            <input type="text" class="form-control border-start-0 small" placeholder="Search by name or ID..." style="height: 40px;">
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <button class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-between" style="height: 40px; background-color: var(--bs-component-bg);">
                            <span class="small fw-medium">Status: All</span>
                            <span class="material-symbols-outlined text-body-secondary">expand_more</span>
                        </button>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <button class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-between" style="height: 40px; background-color: var(--bs-component-bg);">
                            <span class="small fw-medium">Department: All</span>
                            <span class="material-symbols-outlined text-body-secondary">expand_more</span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="card rounded-3 border bg-body-component mt-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="text-body-secondary">
                            <tr>
                                <th class="px-4 py-3 text-uppercase small" scope="col">Course Title</th>
                                <th class="px-4 py-3 text-uppercase small" scope="col">Course ID</th>
                                <th class="px-4 py-3 text-uppercase small" scope="col">Instructor</th>
                                <th class="px-4 py-3 text-uppercase small" scope="col">Department</th>
                                <th class="px-4 py-3 text-uppercase small" scope="col">Status</th>
                                <th class="px-4 py-3 text-uppercase small" scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <tr>
                                <td class="px-4 py-4 text-nowrap small fw-medium text-body">Introduction to Python</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">CS101</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Dr. Alan Turing</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Computer Science</td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <span class="badge rounded-pill bg-success-subtle fw-semibold" style="font-size: 0.75rem;">Published</span>
                                </td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-link p-0 text-primary"><span class="material-symbols-outlined">edit</span></button>
                                        <button class="btn btn-link p-0 text-info"><span class="material-symbols-outlined">visibility</span></button>
                                        <button class="btn btn-link p-0 text-danger"><span class="material-symbols-outlined">delete</span></button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-4 text-nowrap small fw-medium text-body">Organic Chemistry</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">CH203</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Dr. Marie Curie</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Chemistry</td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <span class="badge rounded-pill bg-success-subtle fw-semibold" style="font-size: 0.75rem;">Published</span>
                                </td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-link p-0 text-primary"><span class="material-symbols-outlined">edit</span></button>
                                        <button class="btn btn-link p-0 text-info"><span class="material-symbols-outlined">visibility</span></button>
                                        <button class="btn btn-link p-0 text-danger"><span class="material-symbols-outlined">delete</span></button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-4 text-nowrap small fw-medium text-body">History of Ancient Rome</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">HI102</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Dr. Edward Gibbon</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">History</td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <span class="badge rounded-pill bg-warning-subtle fw-semibold" style="font-size: 0.75rem;">Draft</span>
                                </td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-link p-0 text-primary"><span class="material-symbols-outlined">edit</span></button>
                                        <button class="btn btn-link p-0 text-info"><span class="material-symbols-outlined">visibility</span></button>
                                        <button class="btn btn-link p-0 text-danger"><span class="material-symbols-outlined">delete</span></button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-4 text-nowrap small fw-medium text-body">Calculus I</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">MA101</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Dr. Isaac Newton</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Mathematics</td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <span class="badge rounded-pill bg-success-subtle fw-semibold" style="font-size: 0.75rem;">Published</span>
                                </td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-link p-0 text-primary"><span class="material-symbols-outlined">edit</span></button>
                                        <button class="btn btn-link p-0 text-info"><span class="material-symbols-outlined">visibility</span></button>
                                        <button class="btn btn-link p-0 text-danger"><span class="material-symbols-outlined">delete</span></button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-4 text-nowrap small fw-medium text-body">Literary Theory</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">EN401</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">Dr. Virginia Woolf</td>
                                <td class="px-4 py-4 text-nowrap small text-body-secondary">English</td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <span class="badge rounded-pill bg-secondary-subtle fw-semibold" style="font-size: 0.75rem;">Archived</span>
                                </td>
                                <td class="px-4 py-4 text-nowrap small">
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-link p-0 text-primary"><span class="material-symbols-outlined">edit</span></button>
                                        <button class="btn btn-link p-0 text-info"><span class="material-symbols-outlined">visibility</span></button>
                                        <button class="btn btn-link p-0 text-danger"><span class="material-symbols-outlined">delete</span></button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer d-flex flex-wrap align-items-center justify-content-between px-4 py-3">
                    <div class="d-sm-none w-100 d-flex justify-content-between">
                         <a class="btn btn-outline-secondary" href="#">Previous</a>
                         <a class="btn btn-outline-secondary" href="#">Next</a>
                    </div>
                    <div class="d-none d-sm-flex flex-grow-1 align-items-center justify-content-between">
                        <div>
                            <p class="small text-body-secondary mb-0">
                                Showing <span class="fw-medium">1</span> to <span class="fw-medium">5</span> of <span class="fw-medium">97</span> results
                            </p>
                        </div>
                        <div>
                            <nav aria-label="Pagination">
                                <ul class="pagination pagination-sm shadow-sm m-0">
                                    <li class="page-item"><a class="page-link" href="#"><span class="material-symbols-outlined" style="font-size: 1rem;">chevron_left</span></a></li>
                                    <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item d-none d-md-block"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><span class="page-link">...</span></li>
                                    <li class="page-item d-none d-md-block"><a class="page-link" href="#">8</a></li>
                                    <li class="page-item"><a class="page-link" href="#"><span class="material-symbols-outlined" style="font-size: 1rem;">chevron_right</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
