@{
    ViewData["Title"] = "Course Management";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "courses";
}


    <main class="flex-grow-1">
        <header class="d-flex align-items-center justify-content-between border-bottom px-4 py-3 bg-body-component sticky-top" style="min-height: 65px; z-index: 1020;">
            <h2 class="fs-5 fw-bold mb-0">Course Management</h2>
            <a asp-action="CreateCourse" class="btn btn-primary">
                <span class="material-symbols-outlined fs-6 me-2">add</span>
                Create Course
            </a>
        </header>

        <div class="p-4">
            <!-- Filter Section -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-3">
                    <form asp-action="Courses" method="get" class="row g-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-body-secondary border-end-0">
                                    <span class="material-symbols-outlined fs-6 text-secondary">search</span>
                                </span>
                                <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Search by title or code..." value="@ViewBag.SearchString">
                                <button class="btn btn-outline-secondary border-start-0" type="submit">Search</button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <select name="status" class="form-select" onchange="this.form.submit()">
                                <option value="All" selected="@(ViewBag.CurrentStatus == "All" || ViewBag.CurrentStatus == null)">All Statuses</option>
                                <option value="Active" selected="@(ViewBag.CurrentStatus == "Active")">Active</option>
                                <option value="Archived" selected="@(ViewBag.CurrentStatus == "Archived")">Archived</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select name="instructorId" class="form-select" onchange="this.form.submit()">
                                <option value="">All Instructors</option>
                                @if (ViewBag.Instructors != null)
                                {
                                    foreach (var instructor in ViewBag.Instructors)
                                    {
                                        <option value="@instructor.UserId" selected="@(ViewBag.CurrentInstructor == instructor.UserId)">@instructor.FirstName @instructor.LastName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select name="termId" class="form-select" onchange="this.form.submit()">
                                <option value="">All Terms</option>
                                @if (ViewBag.Terms != null)
                                {
                                    foreach (var term in ViewBag.Terms)
                                    {
                                        <option value="@term.AcademicTermId" selected="@(ViewBag.CurrentTerm == term.AcademicTermId)">@term.TermName</option>
                                    }
                                }
                            </select>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-bottom-0 py-3 ps-4">Course Code</th>
                                    <th class="border-bottom-0 py-3">Title</th>
                                    <th class="border-bottom-0 py-3">Instructor</th>
                                    <th class="border-bottom-0 py-3">Term</th>
                                    <th class="border-bottom-0 py-3">Enrollment</th>
                                    <th class="border-bottom-0 py-3">Status</th>
                                    <th class="border-bottom-0 py-3 text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in ViewBag.Courses)
                                {
                                    <tr>
                                        <td class="ps-4 fw-medium">@course.CourseCode</td>
                                        <td>@course.Title</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center fs-xs fw-bold" style="width: 32px; height: 32px;">
                                                    @course.Instructor.FirstName.Substring(0,1)@course.Instructor.LastName.Substring(0,1)
                                                </div>
                                                <div>
                                                    <p class="mb-0 fs-sm fw-medium">@course.Instructor.FirstName @course.Instructor.LastName</p>
                                                    <p class="mb-0 fs-xs text-body-secondary">@course.Instructor.Email</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@course.AcademicTerm.TermName</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="progress flex-grow-1" style="height: 6px; width: 60px;">
                                                    @{
                                                        var percent = (double)course.CurrentEnrollment / course.MaxEnrollment * 100;
                                                        var color = percent > 90 ? "bg-danger" : "bg-success";
                                                    }
                                                    <div class="progress-bar @color" role="progressbar" style="width: @percent%" aria-valuenow="@course.CurrentEnrollment" aria-valuemin="0" aria-valuemax="@course.MaxEnrollment"></div>
                                                </div>
                                                <span class="fs-sm text-body-secondary">@course.CurrentEnrollment/@course.MaxEnrollment</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (course.Status == "Active")
                                            {
                                                <span class="badge bg-success-subtle text-success border border-success-subtle">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">@course.Status</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Enrollments" asp-route-courseId="@course.CourseId" class="btn btn-sm btn-outline-secondary" title="Manage Enrollments">
                                                    <span class="material-symbols-outlined fs-6">group</span>
                                                </a>
                                                <a asp-action="EditCourse" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                    <span class="material-symbols-outlined fs-6">edit</span>
                                                </a>
                                                <!-- Delete Modal Trigger -->
                                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteCourseModal-@course.CourseId" title="Delete">
                                                    <span class="material-symbols-outlined fs-6">delete</span>
                                                </button>
                                            </div>

                                            <!-- Delete Modal -->
                                            <div class="modal fade" id="deleteCourseModal-@course.CourseId" tabindex="-1" aria-labelledby="deleteCourseModalLabel-@course.CourseId" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="deleteCourseModalLabel-@course.CourseId">Confirm Delete</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body text-start">
                                                            Are you sure you want to delete course <strong>@course.Title</strong>?
                                                            <br><br>
                                                            <small class="text-muted">This action will deactivate the course.</small>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <form asp-action="DeleteCourse" asp-route-id="@course.CourseId" method="post">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="p-3 border-top bg-light">
                        <span class="fs-sm fw-normal text-secondary">Showing <span class="fw-semibold text-body">@((ViewBag.Courses as IEnumerable<dynamic>)?.Count() ?? 0)</span> results</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
