@{
    ViewData["Title"] = "Course Management";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "courses";
}

    <main class="flex-grow-1">
        <header class="d-flex align-items-center justify-content-between border-bottom px-4 py-3 bg-body-component sticky-top" style="min-height: 65px; z-index: 1020;">
            <h2 class="fs-5 fw-bold mb-0">Course Management</h2>
            <a asp-action="CreateCourse" class="btn btn-primary">
                <span class="material-symbols-outlined fs-6 me-2">add</span>
                Create Course
            </a>
        </header>

        <div class="p-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-bottom-0 py-3 ps-4">Course Code</th>
                                    <th class="border-bottom-0 py-3">Title</th>
                                    <th class="border-bottom-0 py-3">Instructor</th>
                                    <th class="border-bottom-0 py-3">Term</th>
                                    <th class="border-bottom-0 py-3">Enrollment</th>
                                    <th class="border-bottom-0 py-3">Status</th>
                                    <th class="border-bottom-0 py-3 text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in ViewBag.Courses)
                                {
                                    <tr>
                                        <td class="ps-4 fw-medium">@course.CourseCode</td>
                                        <td>@course.Title</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center fs-xs fw-bold" style="width: 32px; height: 32px;">
                                                    @course.Instructor.FirstName.Substring(0,1)@course.Instructor.LastName.Substring(0,1)
                                                </div>
                                                <div>
                                                    <p class="mb-0 fs-sm fw-medium">@course.Instructor.FirstName @course.Instructor.LastName</p>
                                                    <p class="mb-0 fs-xs text-body-secondary">@course.Instructor.Email</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@course.AcademicTerm.TermName</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="progress flex-grow-1" style="height: 6px; width: 60px;">
                                                    @{
                                                        var percent = (double)course.CurrentEnrollment / course.MaxEnrollment * 100;
                                                        var color = percent > 90 ? "bg-danger" : "bg-success";
                                                    }
                                                    <div class="progress-bar @color" role="progressbar" style="width: @percent%" aria-valuenow="@course.CurrentEnrollment" aria-valuemin="0" aria-valuemax="@course.MaxEnrollment"></div>
                                                </div>
                                                <span class="fs-sm text-body-secondary">@course.CurrentEnrollment/@course.MaxEnrollment</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (course.Status == "Active")
                                            {
                                                <span class="badge bg-success-subtle text-success border border-success-subtle">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">@course.Status</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Enrollments" asp-route-courseId="@course.CourseId" class="btn btn-sm btn-outline-secondary" title="Manage Enrollments">
                                                    <span class="material-symbols-outlined fs-6">group</span>
                                                </a>
                                                <a asp-action="EditCourse" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                    <span class="material-symbols-outlined fs-6">edit</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
