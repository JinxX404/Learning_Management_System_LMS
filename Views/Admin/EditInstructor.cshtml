@{
    ViewData["Title"] = "Edit Instructor";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "instructors";
    var user = ViewBag.User as Learning_Management_System.Models.User;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/add-instructor_admin.css">
}

    <main class="flex-grow-1 p-4 p-lg-5">
      <div class="mx-auto" style="max-width: 42rem;"> <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb fs-sm fw-medium">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Instructors">Instructors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Instructor</li>
          </ol>
        </nav>
        
        <div class="d-flex flex-wrap justify-content-between gap-3 mb-5">
          <div class="d-flex flex-column gap-2">
            <h1 class="text-body-emphasis h3 fw-bold mb-0">Edit Instructor</h1>
            <p class="text-secondary fs-6 mb-0">Update the instructor's details.</p>
          </div>
        </div>
        
        <div class="card border rounded-4 shadow-sm">
          <form class="p-4 p-lg-5 vstack gap-4" asp-action="EditUser" method="POST">
            @Html.AntiForgeryToken()
            <input type="hidden" name="userId" value="@(user?.UserId)" />
            <input type="hidden" name="role" value="Instructor" />
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger rounded-3 mb-4" role="alert">
                    @ViewBag.Error
                </div>
            }
            
            <div class="vstack gap-4">
              <div class="row g-4">
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="firstName">First Name</label>
                  <input class="form-control form-control-h-11" id="firstName" name="firstName" value="@(user?.FirstName)" type="text" />
                </div>
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="lastName">Last Name</label>
                  <input class="form-control form-control-h-11" id="lastName" name="lastName" value="@(user?.LastName)" type="text" />
                </div>
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="email">Email Address</label>
                  <input class="form-control form-control-h-11" id="email" name="email" value="@(user?.Email)" type="text" />
                </div>
              </div>
              
              <div class="row g-4">
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="password">Password</label>
                  <div class="position-relative">
                    <input class="form-control form-control-h-11" id="password" name="password" placeholder="Leave blank to keep current" type="password" />
                    <button class="btn btn-link text-secondary position-absolute end-0 top-50 translate-middle-y" type="button" style="padding-right: 0.75rem;">
                      <span class="material-symbols-outlined" style="font-size: 20px;">visibility_off</span>
                    </button>
                  </div>
                </div>
                
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="isActive">Status</label>
                  <select class="form-select form-control-h-11" id="isActive" name="isActive">
                    <option value="true" selected="@(user?.IsActive == true)">Active</option>
                    <option value="false" selected="@(user?.IsActive == false)">Inactive</option>
                  </select>
                </div>
              </div>
              
            </div>
            
            <hr class="my-3" />
            
            <div class="d-flex justify-content-end gap-3">
              <a class="btn btn-cancel rounded-3 fs-sm fw-semibold px-4 py-2" asp-action="Instructors" role="button">Cancel</a>
              <button class="btn btn-primary rounded-3 fs-sm fw-semibold px-4 py-2" type="submit">Update Instructor</button>
            </div>
          </form>
        </div>
      </div>
    </main>
</div>
