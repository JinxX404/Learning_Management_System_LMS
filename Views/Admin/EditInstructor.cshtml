@{
    ViewData["Title"] = "Edit Instructor";
    Layout = "_Layout";
    ViewData["AdminActive"] = "instructors";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/edit-instructor_admin.css">
}

<div class="d-flex vh-100 w-100">
    
    <main class="flex-grow-1 p-4 p-lg-5 overflow-auto">
      <div class="mx-auto" style="max-width: 56rem;">
        
        <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb fs-sm fw-medium mb-0">
            <li class="breadcrumb-item"><a asp-controller="Preview" asp-action="ViewPage" asp-route-name="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Preview" asp-action="ViewPage" asp-route-name="InstructorManagement">Instructors</a></li>
            <li class="breadcrumb-item active text-body-emphasis" aria-current="page">Edit Instructor</li>
          </ol>
        </nav>
        
        <div class="d-flex flex-wrap justify-content-between gap-3 mb-5">
          <h1 class="text-body-emphasis h2 fw-bolder">Edit Instructor: John Doe</h1>
        </div>
        
        <div class="card bg-tertiary border rounded-4 shadow-sm">
          <form>
            <div class="card-body p-4 p-lg-5 vstack gap-5">
              
              <section>
                <h3 class="text-body-emphasis h5 fw-bold pb-3 border-bottom mb-4">Basic Information</h3>
                <div class="row g-4 mt-1">
                  <div class="col-md-6">
                    <label class="form-label fs-sm fw-medium" for="full-name">Full Name</label>
                    <input class="form-control form-control-h-12 rounded-lg" id="full-name" type="text" value="John Doe" />
                  </div>
                  <div class="col-md-6">
                    <label class="form-label fs-sm fw-medium" for="email">Email Address</label>
                    <input class="form-control form-control-h-12 rounded-lg" id="email" type="email" value="john.doe@academix.edu" />
                  </div>
                  <div class="col-12">
                    <label class="form-label fs-sm fw-medium" for="password">Password</label>
                    <input class="form-control form-control-h-12 rounded-lg" id="password" placeholder="Leave blank to keep current password" type="password" />
                  </div>
                </div>
              </section>
              
              <section>
                <h3 class="text-body-emphasis h5 fw-bold pb-3 border-bottom mb-4">Academic Details</h3>
                <div class="row g-4 mt-1">
                  <div class="col-12">
                    <label class="form-label fs-sm fw-medium" for="department">Department</label>
                    <select class="form-select form-control-h-12 rounded-lg fs-sm" id="department">
                      <option>Computer Science</option>
                      <option selected>Mathematics</option>
                      <option>Physics</option>
                      <option>Literature</option>
                    </select>
                  </div>
                  <div class="col-12">
                    <label class="form-label fs-sm fw-medium" for="biography">Biography</label>
                    <textarea class="form-control rounded-lg fs-sm p-4" id="biography" placeholder="Enter a professional bio...">Dr. John Doe is a professor in the Mathematics department, specializing in theoretical physics and quantum mechanics. He has published numerous papers and is a recipient of the prestigious Academix Research Award.</textarea>
                  </div>
                </div>
              </section>
              
              <section>
                <h3 class="text-body-emphasis h5 fw-bold pb-3 border-bottom mb-4">Course Management</h3>
                <div class="mt-4">
                  <label class="form-label fs-sm fw-medium" for="assign-courses">Assigned Courses</label>
                  <div class="form-control form-control-tags p-3 rounded-lg">
                    <div class="tags-wrapper">
                      <span class="badge rounded-pill">
                        <span>MATH-101: Calculus I</span>
                        <button class="btn-close" type="button" aria-label="Remove"></button>
                      </span>
                      <span class="badge rounded-pill">
                        <span>PHYS-201: Quantum Mechanics</span>
                        <button class="btn-close" type="button" aria-label="Remove"></button>
                      </span>
                    </div>
                    <input class="form-control-tags-input fs-sm" id="assign-courses" placeholder="Search and add courses..." />
                  </div>
                </div>
              </section>
              
              <section>
                <h3 class="text-body-emphasis h5 fw-bold pb-3 border-bottom mb-4">Account Control</h3>
                <div class="mt-4">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <p class="text-body-emphasis fs-sm fw-medium mb-0">Account Status</p>
                      <p class="text-secondary fs-xs mt-1 mb-0">Inactive accounts cannot log in or be assigned to new courses.</p>
                    </div>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" role="switch" id="account-status" checked>
                      <label class="form-check-label fs-sm fw-medium ms-2" for="account-status">Active</label>
                    </div>
                  </div>
                </div>
              </section>
              
            </div>
            
            <div class="card-footer bg-transparent d-flex justify-content-end gap-3 p-4 border-top">
              <a class="btn btn-light rounded-lg fs-sm fw-medium px-4 py-2" asp-controller="Preview" asp-action="ViewPage" asp-route-name="InstructorManagement" role="button">Cancel</a>
              <button class="btn btn-primary rounded-lg fs-sm fw-medium px-4 py-2" type="submit">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
