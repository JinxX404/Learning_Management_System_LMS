@{
    ViewData["Title"] = "Add New Instructor";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "instructors";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/add-instructor_admin.css">
}

    <main class="flex-grow-1 p-4 p-lg-5">
      <div class="mx-auto" style="max-width: 42rem;"> <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb fs-sm fw-medium">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Instructors">Instructors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add New</li>
          </ol>
        </nav>
        
        <div class="d-flex flex-wrap justify-content-between gap-3 mb-5">
          <div class="d-flex flex-column gap-2">
            <h1 class="text-body-emphasis h3 fw-bold mb-0">Add New Instructor</h1>
            <p class="text-secondary fs-6 mb-0">Fill in the details below to add a new instructor to the system.</p>
          </div>
        </div>
        
        <div class="card border rounded-4 shadow-sm">
          <form class="p-4 p-lg-5 vstack gap-4" asp-action="CreateInstructor" method="POST">
            
            <div class="vstack gap-4">
              <div class="row g-4">
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="fullName">Full Name</label>
                  <input class="form-control form-control-h-11" id="fullName" name="fullName" placeholder="e.g., Jane Doe" type="text" />
                </div>
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="email">Email Address</label>
                  <input class="form-control form-control-h-11" id="email" name="email" placeholder="e.g., jane.doe@university.edu" type="email" />
                </div>
              </div>
              
              <div class="row g-4">
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="password">Password</label>
                  <div class="position-relative">
                    <input class="form-control form-control-h-11" id="password" name="password" placeholder="Enter a secure password" type="password" />
                    <button class="btn btn-link text-secondary position-absolute end-0 top-50 translate-middle-y" type="button" style="padding-right: 0.75rem;">
                      <span class="material-symbols-outlined" style="font-size: 20px;">visibility_off</span>
                    </button>
                  </div>
                  <div class="form-text fs-xs mt-1">Password must be at least 8 characters long.</div>
                </div>
                <div class="col-md-6">
                  <label class="form-label fs-sm fw-medium" for="department">Department</label>
                  <select class="form-select form-control-h-11" id="department" name="department">
                    <option>Computer Science</option>
                    <option>Mathematics</option>
                    <option>Physics</option>
                    <option>Literature</option>
                  </select>
                </div>
              </div>
              
              <div>
                <label class="form-label fs-sm fw-medium" for="biography">Biography</label>
                <textarea class="form-control" id="biography" name="biography" placeholder="Briefly describe the instructor's background and expertise..."></textarea>
                <div class="form-text fs-xs mt-1 text-end">0 / 500 characters</div>
              </div>
            </div>
            
            <hr class="my-3" />
            
            <div class="vstack gap-2">
              <label class="form-label fs-sm fw-medium" for="assign-courses">Assign Courses</label>
              <div class="form-control form-control-tags" id="assign-courses-wrapper" onclick="document.getElementById('assign-courses').focus()">
                <span class="badge rounded-pill">
                  <span>CS101: Intro to Programming</span>
                  <button class="btn-close" type="button" aria-label="Remove CS101"></button>
                </span>
                <span class="badge rounded-pill">
                  <span>MA203: Linear Algebra</span>
                  <button class="btn-close" type="button" aria-label="Remove MA203"></button>
                </span>
                <input id="assign-courses" placeholder="Search and select courses..." />
              </div>
            </div>
            
            <hr class="my-3" />
            
            <div class="d-flex justify-content-end gap-3">
              <a class="btn btn-cancel rounded-3 fs-sm fw-semibold px-4 py-2" asp-action="Instructors" role="button">Cancel</a>
              <button class="btn btn-primary rounded-3 fs-sm fw-semibold px-4 py-2" type="submit">Save Instructor</button>
            </div>
          </form>
        </div>
      </div>
    </main>
