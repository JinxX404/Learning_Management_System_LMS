@{
    ViewData["Title"] = "Edit Academic Term";
    Layout = "_AdminLayout";
    ViewData["AdminActive"] = "terms";
    var term = ViewBag.Term as Learning_Management_System.Models.AcademicTerm;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/add-term_admin.css">
}

    <main class="flex-grow-1 d-flex flex-column">
   
      
      <div class="p-4 p-lg-5 flex-grow-1">
        <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb fs-sm fw-medium">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="AcademicTerms">Terms</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Term</li>
          </ol>
        </nav>
        
        <div class="d-flex flex-wrap justify-content-between gap-3 mb-5">
          <div class="d-flex flex-column gap-2" style="min-width: 18rem;">
            <h1 class="h3 fw-bold text-body-emphasis mb-0">Edit Academic Term</h1>
            <p class="text-secondary fs-6 mb-0">Update the details of the academic term.</p>
          </div>
        </div>
        
        <div class="card bg-body-tertiary border shadow-sm rounded-4 mx-auto" style="max-width: 56rem;">
          <div class="card-header bg-transparent px-4 py-3">
            <h2 class="h5 fw-bold text-body-emphasis mb-0">Term Details</h2>
          </div>
          <form class="card-body p-4 vstack gap-4" asp-action="EditAcademicTerm" method="POST">
            @Html.AntiForgeryToken()
            <input type="hidden" name="academicTermId" value="@(term?.AcademicTermId)" />
            <input type="hidden" name="institutionId" value="@(term?.InstitutionId)" />
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div>
              <label class="form-label fs-sm fw-medium" for="termName">Term Name</label>
              <input class="form-control rounded-3" id="termName" name="termName" value="@(term?.TermName)" placeholder="e.g., Fall Semester 2024" type="text" />
            </div>
            
            <div class="row g-4">
              <div class="col-md-6">
                <label class="form-label fs-sm fw-medium" for="startDate">Start Date</label>
                <input class="form-control rounded-3" id="startDate" name="startDate" value="@(term?.StartDate.ToString("yyyy-MM-dd"))" type="date" />
              </div>
              <div class="col-md-6">
                <label class="form-label fs-sm fw-medium" for="endDate">End Date</label>
                <input class="form-control rounded-3" id="endDate" name="endDate" value="@(term?.EndDate.ToString("yyyy-MM-dd"))" type="date" />
              </div>
            </div>
            
            <div>
              <label class="form-label fs-sm fw-medium" for="isActive">Status</label>
              <select class="form-select rounded-3" id="isActive" name="isActive">
                <option value="true" selected="@(term?.IsActive == true)">Active</option>
                <option value="false" selected="@(term?.IsActive == false)">Inactive</option>
              </select>
            </div>
            
            <div class="d-flex justify-content-end gap-3 pt-3">
              <a class="btn btn-light rounded-3 fs-sm fw-medium" asp-action="AcademicTerms" role="button">Cancel</a>
              <button class="btn btn-primary rounded-3 fs-sm fw-medium" type="submit">Update Term</button>
            </div>
          </form>
        </div>
      </div>
    </main>
