@{
    ViewData["Title"] = "Course Details";
    Layout = "_Layout";
    var course = ViewBag.Course as Learning_Management_System.Models.Course;
    var lectures = course?.Lectures;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-details.css">
}

@await Html.PartialAsync("_InstructorNav")

<div class="container-xxl py-5">
    @if (course != null)
    {
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Instructor" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Instructor" asp-action="MyCourses">My Courses</a></li>
                        <li class="breadcrumb-item active">@course.Title</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="h2 fw-bold mb-2">@course.Title</h1>
                        <div class="d-flex gap-3 flex-wrap">
                            <span class="badge bg-primary">@course.CourseCode</span>
                            <span class="badge bg-info">@course.CreditHours Credits</span>
                            <span class="badge bg-success">@course.CurrentEnrollment/@course.MaxEnrollment Students</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <ul class="nav nav-tabs mb-4" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#lectures" type="button">
                    <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">video_library</span>
                    Lectures
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#quizzes" type="button">
                    <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">quiz</span>
                    Quizzes
                </button>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="lectures">
                <div class="card border-0 shadow-sm">
                    <div class="card-header border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Course Lectures</h5>
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addLectureModal">
                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                            Add Lecture
                        </button>
                    </div>
                    <div class="card-body">
                        @if (lectures != null && lectures.Any())
                        {
                            <div class="row g-3">
                                @foreach (var lecture in lectures)
                                {
                                    <div class="col-md-6">
                                        <div class="card h-100 shadow-sm">
                                            <div class="card-header d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@lecture.Title</h6>
                                                    <div class="small text-muted">@lecture.Description</div>
                                                </div>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-sm btn-outline-success open-add-asset-modal" data-bs-toggle="modal" data-bs-target="#addAssetModal" data-lecture-id="@lecture.LectureId">Add Asset</button>
                                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editLectureModal" 
                                                            data-lecture-id="@lecture.LectureId" 
                                                            data-title="@lecture.Title" 
                                                            data-description="@lecture.Description">
                                                        Edit
                                                    </button>
                                                    <form asp-controller="Instructor" asp-action="DeleteLecture" method="post" class="d-inline ms-1">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="lectureId" value="@lecture.LectureId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this lecture and its assets?');">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                @if (lecture.LearningAssets != null && lecture.LearningAssets.Any())
                                                {
                                                    <div class="d-flex flex-column gap-2">
                                                        @foreach (var asset in lecture.LearningAssets)
                                                        {
                                                            <div class="d-flex justify-content-between align-items-center p-2 border rounded">
                                                                <div>
                                                                    <div class="fw-semibold">@asset.Title</div>
                                                                    <div class="small text-muted">@asset.AssetType @if(!string.IsNullOrWhiteSpace(asset.FileUrl)){<span>â€¢ <a href="@asset.FileUrl" target="_blank">Open</a></span>}</div>
                                                                </div>
                                                                <div class="d-flex gap-2">
                                                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editAssetModal"
                                                                            data-asset-id="@asset.AssetId"
                                                                            data-title="@asset.Title"
                                                                            data-type="@asset.AssetType"
                                                                            data-url="@asset.FileUrl">
                                                                        Edit
                                                                    </button>
                                                                    <form asp-controller="Instructor" asp-action="DeleteLearningAsset" method="post" class="d-inline">
                                                                        @Html.AntiForgeryToken()
                                                                        <input type="hidden" name="assetId" value="@asset.AssetId" />
                                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this asset?');">Delete</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="text-muted small">No assets for this lecture yet.</div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <span class="material-symbols-outlined fs-1 text-muted">video_library</span>
                                <p class="text-muted mt-3">No lectures added yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="quizzes">
                <div class="card border-0 shadow-sm">
                    <div class="card-header  border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Quizzes</h5>
                        <a asp-controller="Instructor" asp-action="CreateQuiz" asp-route-courseId="@course.CourseId" class="btn btn-primary btn-sm">
                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                            Create Quiz
                        </a>
                    </div>
                    <div class="card-body">
                        @if (course.Quizzes != null && course.Quizzes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var quiz in course.Quizzes.Where(q => !q.IsDeleted))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@quiz.Title</h6>
                                            <small class="text-muted">Due: @(quiz.DueDate?.ToString("MMM dd, yyyy") ?? "No Due Date")</small>
                                        </div>
                                        <div class="btn-group">
                                            <a asp-action="EditQuiz" asp-route-id="@quiz.QuizId" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteQuiz(@quiz.QuizId)">Delete</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <span class="material-symbols-outlined fs-1 text-muted">quiz</span>
                                <p class="text-muted mt-3">No quizzes created yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Course not found.
        </div>
    }
</div>

<!-- Add Lecture Modal -->
<div class="modal fade" id="addLectureModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="AddLecture" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Lecture</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="courseId" value="@course?.CourseId" />
                    <div class="mb-3">
                        <label class="form-label">Lecture Title</label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Lecture Order (OrderIndex)</label>
                        <input type="number" name="orderIndex" class="form-control" min="1" placeholder="Leave empty to assign automatically" />
                        <div class="form-text">Enter a number to place the lecture at a specific position in the course, or leave empty to append to the end.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Lecture</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Lecture Modal -->
<div class="modal fade" id="editLectureModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="EditLecture" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Edit Lecture</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="lectureId" id="editLectureId" />
                    <div class="mb-3">
                        <label class="form-label">Lecture Title</label>
                        <input type="text" name="title" id="editLectureTitle" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" id="editLectureDescription" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Asset Modal -->
<div class="modal fade" id="addAssetModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="AddLearningAsset" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add Learning Asset</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="courseId" value="@course?.CourseId" />
                    <input type="hidden" name="lectureId" id="addAssetLectureId" />

                    <div class="mb-3">
                        <label class="form-label">Asset Title</label>
                        <input type="text" name="title" class="form-control" placeholder="e.g., Slides, Demo Video" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Asset Type</label>
                        <select name="assetType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Video">Video</option>
                            <option value="PDF">PDF Document</option>
                            <option value="PPT">PowerPoint</option>
                            <option value="Link">External Link</option>
                            <option value="Code">Code File</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">URL</label>
                        <input type="url" name="fileUrl" class="form-control" placeholder="https://example.com/asset.pdf" />
                        <div class="form-text">Provide a direct public URL or leave empty if you'll upload later.</div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Asset</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Asset Modal -->
<div class="modal fade" id="editAssetModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="EditLearningAsset" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Edit Learning Asset</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="assetId" id="editAssetId" />

                    <div class="mb-3">
                        <label class="form-label">Asset Title</label>
                        <input type="text" name="title" id="editAssetTitle" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Asset Type</label>
                        <select name="assetType" id="editAssetType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Video">Video</option>
                            <option value="PDF">PDF Document</option>
                            <option value="PPT">PowerPoint</option>
                            <option value="Link">External Link</option>
                            <option value="Code">Code File</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">URL</label>
                        <input type="url" name="fileUrl" id="editAssetUrl" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add Asset Modal
            var addAssetModal = document.getElementById('addAssetModal');
            if (addAssetModal) {
                addAssetModal.addEventListener('show.bs.modal', function (event) {
                    var trigger = event.relatedTarget;
                    var lectureId = trigger.getAttribute('data-lecture-id');
                    var input = document.getElementById('addAssetLectureId');
                    if (input) input.value = lectureId;
                });
            }

            // Edit Lecture Modal
            var editLectureModal = document.getElementById('editLectureModal');
            if (editLectureModal) {
                editLectureModal.addEventListener('show.bs.modal', function (event) {
                    var trigger = event.relatedTarget;
                    
                    var id = trigger.getAttribute('data-lecture-id');
                    var title = trigger.getAttribute('data-title');
                    var desc = trigger.getAttribute('data-description');

                    document.getElementById('editLectureId').value = id;
                    document.getElementById('editLectureTitle').value = title;
                    document.getElementById('editLectureDescription').value = desc;
                });
            }

            // Edit Asset Modal
            var editAssetModal = document.getElementById('editAssetModal');
            if (editAssetModal) {
                editAssetModal.addEventListener('show.bs.modal', function (event) {
                    var trigger = event.relatedTarget;
                    
                    var id = trigger.getAttribute('data-asset-id');
                    var title = trigger.getAttribute('data-title');
                    var type = trigger.getAttribute('data-type');
                    var url = trigger.getAttribute('data-url');

                    document.getElementById('editAssetId').value = id;
                    document.getElementById('editAssetTitle').value = title;
                    document.getElementById('editAssetType').value = type;
                    document.getElementById('editAssetUrl').value = url;
                });
            }
        });

        function deleteQuiz(quizId) {
            if (confirm('Are you sure you want to delete this quiz?')) {
                fetch('/Instructor/DeleteQuiz/' + quizId, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        }
    </script>
}
