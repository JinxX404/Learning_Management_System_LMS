@{
    ViewData["Title"] = "Course Details";
    Layout = "_Layout";
    var course = ViewBag.Course as Learning_Management_System.Models.Course;
    var lectures = ViewBag.Lectures as List<Learning_Management_System.Models.Lecture>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/course-details.css">
}

@await Html.PartialAsync("_InstructorNav")

<div class="container-xxl py-5">
    @if (course != null)
    {
        <div class="row mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Instructor" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Instructor" asp-action="MyCourses">My Courses</a></li>
                        <li class="breadcrumb-item active">@course.Title</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="h2 fw-bold mb-2">@course.Title</h1>
                        <div class="d-flex gap-3 flex-wrap">
                            <span class="badge bg-primary">@course.CourseCode</span>
                            <span class="badge bg-info">@course.CreditHours Credits</span>
                            <span class="badge bg-success">@course.CurrentEnrollment/@course.MaxEnrollment Students</span>
                        </div>
                    </div>
                    <div class="btn-group">
                        <a asp-controller="Instructor" asp-action="EditCourse" asp-route-id="@course.CourseId" class="btn btn-outline-primary">
                            <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">edit</span>
                            Edit
                        </a>
                        <a asp-controller="Instructor" asp-action="CourseRoster" asp-route-id="course.CourseId" class="btn btn-outline-primary">
                            <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">people</span>
                            Roster
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <ul class="nav nav-tabs mb-4" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#lectures" type="button">
                    <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">video_library</span>
                    Lectures
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#assignments" type="button">
                    <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">assignment</span>
                    Assignments
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#quizzes" type="button">
                    <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">quiz</span>
                    Quizzes
                </button>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="lectures">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Course Lectures</h5>
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addLectureModal">
                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                            Add Lecture
                        </button>
                    </div>
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Course Lectures</h5>
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addAssetModal">
                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                            Add Learning Asset
                        </button>
                    </div>
                    <div class="card-body">
                        @if (lectures != null && lectures.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var lecture in lectures)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@lecture.Title</h6>
                                            <p class="mb-0 text-muted small">@lecture.Description</p>
                                        </div>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-success me-1 open-add-asset-modal" data-bs-toggle="modal" data-bs-target="#addAssetModal" data-lecture-id="@lecture.LectureId">
                                                <span class="material-symbols-outlined" style="font-size: 1.2rem;">add</span>
                                                Add Asset
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary">
                                                <span class="material-symbols-outlined" style="font-size: 1.2rem;">edit</span>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger">
                                                <span class="material-symbols-outlined" style="font-size: 1.2rem;">delete</span>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <span class="material-symbols-outlined fs-1 text-muted">video_library</span>
                                <p class="text-muted mt-3">No lectures added yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="assignments">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Assignments</h5>
                        <a asp-controller="Instructor" asp-action="CreateAssignment" asp-route-courseId="@course.CourseId" class="btn btn-primary btn-sm">
                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                            Create Assignment
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="text-center py-5">
                            <span class="material-symbols-outlined fs-1 text-muted">assignment</span>
                            <p class="text-muted mt-3">No assignments created yet.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="quizzes">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Quizzes</h5>
                        <a asp-controller="Instructor" asp-action="CreateQuiz" asp-route-courseId="@course.CourseId" class="btn btn-primary btn-sm">
                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                            Create Quiz
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="text-center py-5">
                            <span class="material-symbols-outlined fs-1 text-muted">quiz</span>
                            <p class="text-muted mt-3">No quizzes created yet.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Course not found.
        </div>
    }
</div>

<!-- Add Lecture Modal -->
<div class="modal fade" id="addLectureModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="AddLecture" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Lecture</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="courseId" value="@course?.CourseId" />
                    <div class="mb-3">
                        <label class="form-label">Lecture Title</label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Lecture</button>
                </div>
            </form>
        </div>
    </div>
</div>
<br>

@* ================================================================================== *@

<!-- Add Asset Modal -->
<div class="modal fade" id="addAssetModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="AddLearningAsset" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add Learning Asset</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="courseId" value="@course?.CourseId" />

                    <div class="mb-3">
                        <label class="form-label">Asset Title</label>
                        <input type="text" name="title" class="form-control" placeholder="e.g., Slides, Demo Video" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Asset Type</label>
                        <select name="assetType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Video">Video</option>
                            <option value="PDF">PDF Document</option>
                            <option value="PPT">PowerPoint</option>
                            <option value="Link">External Link</option>
                            <option value="Code">Code File</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">URL</label>
                        <input type="url" name="fileUrl" class="form-control" placeholder="https://example.com/asset.pdf" />
                        <div class="form-text">Provide a direct public URL or leave empty if you'll upload later.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Asset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // When an "Add Asset" button for a specific lecture is clicked, try to pass lecture id via dataset
        document.addEventListener('DOMContentLoaded', function () {
            var assetModal = document.getElementById('addAssetModal');
            if (!assetModal) return;

            assetModal.addEventListener('show.bs.modal', function (event) {
                var trigger = event.relatedTarget;
                if (!trigger) return;
                var lectureId = trigger.getAttribute('data-lecture-id');
                if (lectureId) {
                    // create a hidden input for lectureId if not exists
                    var existing = assetModal.querySelector('input[name="lectureId"]');
                    if (!existing) {
                        var inp = document.createElement('input');
                        inp.type = 'hidden';
                        inp.name = 'lectureId';
                        inp.value = lectureId;
                        assetModal.querySelector('form').appendChild(inp);
                    } else {
                        existing.value = lectureId;
                    }
                }
            });
        });
    </script>
}
