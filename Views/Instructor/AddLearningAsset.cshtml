@model Learning_Management_System.Models.LearningAsset

@{
    ViewData["Title"] = "Add Learning Asset";
    var lectureId = ViewBag.LectureId as int?;
    var lectureTitle = ViewBag.LectureTitle as string;
    var courseId = ViewBag.CourseId as int? ?? 0;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4>
                <i class="bi bi-file-earmark-plus"></i> Add Learning Asset
                @if (!string.IsNullOrEmpty(lectureTitle))
                {
                    <small class="ms-2">→ Lecture: <strong>@lectureTitle</strong></small>
                }
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="AddLearningAsset" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="lectureId" value="@lectureId" />
                <input type="hidden" name="courseId" value="@courseId" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="e.g., Lecture Slides, Demo Video" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssetType" class="form-label"></label>
                    <select asp-for="AssetType" class="form-select">
                        <option value="">-- Select Type --</option>
                        <option value="Video">Video</option>
                        <option value="PDF">Document(PDF | DOCX | PowerPoint)</option>
                        @* <option value="PPT">PowerPoint</option> *@
                        <option value="Link">Link</option>
                        @* <option value="Code">Code File</option> *@
                    </select>
                    <span asp-validation-for="AssetType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FileUrl" class="form-label"></label>
                    <input asp-for="FileUrl" type="url" class="form-control"
                           placeholder="https://example.com/asset.pdf" />
                    <div class="form-text">
                        Must be a direct, public URL (e.g., Google Drive share link with access=anyone).
                    </div>
                    <span asp-validation-for="FileUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="CourseDetails" asp-controller="Instructor"
                       asp-route-id="@courseId"
                       class="btn btn-secondary">← Cancel</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save Asset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}