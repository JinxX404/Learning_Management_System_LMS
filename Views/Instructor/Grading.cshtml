@{
    ViewData["Title"] = "Grade Submissions";
    Layout = "_Layout";
    var ungraded = ViewBag.Ungraded as List<Learning_Management_System.Models.Grade>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/grading.css">
}

@await Html.PartialAsync("_InstructorNav")

<div class="container-xxl py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2 fw-bold">Grade Submissions</h1>
            <p class="text-muted">Review and grade student submissions</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">Pending Submissions</h5>
                </div>
                <div class="col-md-6 text-md-end">
                    <select class="form-select form-select-sm d-inline-block w-auto">
                        <option selected>All Courses</option>
                        <option>Course 1</option>
                        <option>Course 2</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (ungraded != null && ungraded.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Course</th>
                                <th>Assignment</th>
                                <th>Submitted</th>
                                <th>Max Points</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var grade in ungraded)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                @grade.User.FirstName?.Substring(0, 1)@grade.User.LastName?.Substring(0, 1)
                                            </div>
                                            <div>
                                                <div class="fw-medium">@grade.User.FirstName @grade.User.LastName</div>
                                                <small class="text-muted">@grade.User.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@grade.GradeBook.Course.CourseCode</span>
                                        <br />
                                        <small>@grade.GradeBook.Course.Title</small>
                                    </td>
                                    <td>@grade.GradeBook.Name</td>
                                    <td>
                                        <small class="text-muted">
                                            @grade.GradedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>@grade.MaxPoints</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#gradeModal"
                                                data-grade-id="@grade.GradeId"
                                                data-student-name="@grade.User.FirstName @grade.User.LastName"
                                                data-assignment="@grade.GradeBook.Name"
                                                data-max-points="@grade.MaxPoints">
                                            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">grade</span>
                                            Grade
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <span class="material-symbols-outlined fs-1 text-muted">assignment_turned_in</span>
                    <p class="text-muted mt-3">No pending submissions to grade.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Grade Modal -->
<div class="modal fade" id="gradeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Instructor" asp-action="GradeSubmission" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Grade Submission</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="gradeId" id="gradeId" />
                    
                    <div class="alert alert-info mb-4">
                        <div class="d-flex align-items-center">
                            <span class="material-symbols-outlined me-2">person</span>
                            <strong id="studentName"></strong>
                        </div>
                        <div class="mt-2">
                            <strong>Assignment:</strong> <span id="assignmentName"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Points</label>
                        <div class="input-group">
                            <input type="number" name="points" class="form-control" min="0" step="0.1" required />
                            <span class="input-group-text">/ <span id="maxPoints"></span></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Feedback</label>
                        <textarea name="feedback" class="form-control" rows="4" placeholder="Provide feedback to the student..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit Grade</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Fill modal with data when opened
    document.getElementById('gradeModal').addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var gradeId = button.getAttribute('data-grade-id');
        var studentName = button.getAttribute('data-student-name');
        var assignment = button.getAttribute('data-assignment');
        var maxPoints = button.getAttribute('data-max-points');
        
        document.getElementById('gradeId').value = gradeId;
        document.getElementById('studentName').textContent = studentName;
        document.getElementById('assignmentName').textContent = assignment;
        document.getElementById('maxPoints').textContent = maxPoints;
    });
</script>
}
