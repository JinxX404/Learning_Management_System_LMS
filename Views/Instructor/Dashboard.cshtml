@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "_Layout";
}

@await Html.PartialAsync("_InstructorNav")

<div class="container-xxl py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2 fw-bold">Instructor Dashboard</h1>
            <p class="text-muted">Welcome back! Here's an overview of your courses and activities.</p>
        </div>
        <div class="col-auto">
            <a asp-controller="Instructor" asp-action="CreateCourse" class="btn btn-primary">
                <span class="material-symbols-outlined me-1" style="font-size: 1.2rem; vertical-align: middle;">add</span>
                Create New Course
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="card-body text-white">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="material-symbols-outlined fs-1 opacity-75">school</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1 opacity-90">My Courses</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.CoursesCount</h3>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0" style="background: rgba(255,255,255,0.1) !important;">
                    <a asp-controller="Instructor" asp-action="MyCourses" class="btn btn-sm btn-link text-white p-0 text-decoration-none">
                        View all courses <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                <div class="card-body text-white">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="material-symbols-outlined fs-1 opacity-75">pending_actions</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1 opacity-90">Pending Grades</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.PendingGradesCount</h3>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0" style="background: rgba(255,255,255,0.1) !important;">
                    <a asp-controller="Instructor" asp-action="GradeSubmissions" class="btn btn-sm btn-link text-white p-0 text-decoration-none">
                        Grade now <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="material-symbols-outlined fs-1 opacity-75">quiz</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1 opacity-90">My Quizzes</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.QuizzesCount</h3>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0" style="background: rgba(255,255,255,0.1) !important;">
                    <a asp-controller="Instructor" asp-action="MyQuizzes" class="btn btn-sm btn-link text-white p-0 text-decoration-none">
                        Manage quizzes <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <div class="card-body text-white">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="material-symbols-outlined fs-1 opacity-75">groups</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1 opacity-90">Total Students</h6>
                            <h3 class="mb-0 fw-bold">@ViewBag.TotalStudents</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Courses</h5>
                    <a asp-controller="Instructor" asp-action="MyCourses" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.CoursesCount > 0)
                    {
                        <p class="text-muted">Your recent courses will appear here.</p>
                        <a asp-controller="Instructor" asp-action="MyCourses" class="btn btn-primary">
                            View My Courses
                        </a>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <span class="material-symbols-outlined fs-1 text-muted">school</span>
                            <p class="text-muted mt-3 mb-3">You don't have any courses yet.</p>
                            <a asp-controller="Instructor" asp-action="CreateCourse" class="btn btn-primary">
                                <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                                Create Your First Course
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Instructor" asp-action="MyCourses" class="btn btn-outline-primary">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.2rem; vertical-align: middle;">school</span>
                            My Courses
                        </a>
                        <a asp-controller="Instructor" asp-action="MyQuizzes" class="btn btn-outline-primary">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.2rem; vertical-align: middle;">quiz</span>
                            My Quizzes
                        </a>
                        <a asp-controller="Instructor" asp-action="CreateQuiz" class="btn btn-outline-success">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.2rem; vertical-align: middle;">add</span>
                            Create Quiz
                        </a>
                        <a asp-controller="Instructor" asp-action="CreateAssignment" class="btn btn-outline-primary">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.2rem; vertical-align: middle;">assignment</span>
                            Create Assignment
                        </a>
                        <a asp-controller="Instructor" asp-action="GradeSubmissions" class="btn btn-outline-warning">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.2rem; vertical-align: middle;">grade</span>
                            Grade Submissions
                        </a>
                        <a asp-controller="Instructor" asp-action="UploadMaterials" class="btn btn-outline-info">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.2rem; vertical-align: middle;">upload</span>
                            Upload Materials
                        </a>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="small mb-0 ps-3">
                        <li class="mb-2">Create engaging course content</li>
                        <li class="mb-2">Provide timely feedback to students</li>
                        <li class="mb-2">Use announcements to keep students informed</li>
                        <li>Review course roster regularly</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
