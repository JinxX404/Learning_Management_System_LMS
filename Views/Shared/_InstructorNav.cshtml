@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<header class="sticky-top border-bottom header-sticky" style="background-color: var(--bs-tertiary-bg-rgb);">
  <div class="d-flex align-items-center px-4" style="height: 4rem;">
    <div class="d-flex align-items-center gap-2">
      <div class="brand-icon-wrapper d-flex align-items-center justify-content-center rounded-3" style="width: 2rem; height: 2rem;">
        <svg class="brand-icon" style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 14l9-5-9-5-9 5 9 5z"/>
          <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
        </svg>
      </div>
      <h1 class="brand-name font-display fs-5 fw-bold text-primary m-0">ESU Portal - Instructor</h1>
    </div>
    <nav class="navbar navbar-expand flex-grow-1 px-4">
      <div class="navbar-nav gap-2">
        <a class="nav-link @(currentAction == "Dashboard" ? "active" : "") d-flex align-items-center gap-2" asp-action="Dashboard" asp-controller="Instructor">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Dashboard
        </a>
        @* <a class="nav-link @(currentAction == "MyCourses" ? "active" : "") d-flex align-items-center gap-2" asp-action="MyCourses" asp-controller="Instructor">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20">
            <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path>
          </svg>
          My Courses
        </a> *@
        <a class="nav-link @(currentAction == "Announcements" ? "active" : "") d-flex align-items-center gap-2" asp-action="Announcements" asp-controller="Instructor">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20">
            <path d="M8 2v4"></path>
            <path d="M16 2v4"></path>
            <rect height="18" rx="2" width="18" x="3" y="4"></rect>
            <path d="M3 10h18"></path>
          </svg>
          Announcements
        </a>
        <a class="nav-link @(currentAction == "GradeSubmissions" ? "active" : "") d-flex align-items-center gap-2" asp-action="GradeSubmissions" asp-controller="Instructor">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20">
            <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
            <path d="M18 13v-3.5A1.5 1.5 0 0 0 16.5 8H3"></path>
            <path d="m10 16 4-4"></path>
            <path d="m14 16-4-4"></path>
            <path d="M10 12v10"></path>
            <path d="M4 12v10"></path>
            <path d="M18 22V10.5"></path>
          </svg>
          Grades
        </a>
        <a class="nav-link @(currentAction == "CourseRoster" || currentAction == "CourseDetails" ? "active" : "") d-flex align-items-center gap-2" asp-action="MyCourses" asp-controller="Instructor">
          <svg class="h-5 w-5" fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
          Courses
        </a>
      </div>
    </nav>
    <div class="d-flex align-items-center gap-3">
      <div class="d-flex align-items-center gap-2">
        <a asp-action="Announcements" asp-controller="Instructor" class="position-relative">
          <button class="btn btn-icon rounded-circle p-2 text-secondary">
            <svg class="h-6 w-6" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
              <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path>
              <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path>
            </svg>
          </button>
        </a>
      </div>
      <div class="d-flex align-items-center gap-2">
        <div class="dropdown">
          <button class="btn btn-link text-decoration-none d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown">
            <img src="https://ui-avatars.com/api/?name=Instructor&background=0D6EFD&color=fff" alt="Instructor" class="rounded-circle" style="width: 2.5rem; height: 2.5rem;">
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" asp-action="Profile" asp-controller="Instructor">Profile</a></li>
            <li><a class="dropdown-item" asp-action="Settings" asp-controller="Instructor">Settings</a></li>
            @* <li><a class="dropdown-item" asp-action="Dashboard" asp-controller="Instructor">Dashboard</a></li> *@
            @* <li><hr class="dropdown-divider"></li> *@
            <li><a class="dropdown-item" asp-action="Logout" asp-controller="Auth">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
